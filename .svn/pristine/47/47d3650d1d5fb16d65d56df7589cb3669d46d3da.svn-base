import { Component } from '@angular/core';
import { FormBuilder } from '@angular/forms';
import { ActivatedRoute, Router } from '@angular/router';
import { SocketService } from 'src/app/ems.utilities/services/socket.service';
import { ToastrService } from 'ngx-toastr';
@Component({
  selector: 'app-crm-smm-sendmail',
  templateUrl: './crm-smm-sendmail.component.html',
  styleUrls: ['./crm-smm-sendmail.component.scss']
})
export class CrmSmmSendmailComponent {
  response_data: any;
  mailsummary_list: any;
  mail: any;
  from_mail: any;
  to_mail: any;
  subject: any;
  body_content: any;
  constructor(private fb: FormBuilder, private route: ActivatedRoute, private router: Router, private service: SocketService, private ToastrService: ToastrService,) { }
  ngOnInit(): void {
    
  }
  GetMailSummary() {
    
    var api = 'MailCampaign/GetMailSummary';
    this.service.get(api).subscribe((result: any) => {
      $('#mail').DataTable().destroy();

      this.response_data = result;
      this.mailsummary_list = this.response_data.mailsummary_list;
      setTimeout(() => {
        $('#mail').DataTable();
      }, 1);
    });

}
}
