<div class="card shadow-sm">
    <div class="card-header">
        <h3 class="card-title">Invoice Summary</h3>
        <div class="card-toolbar">
        </div>
    </div>
    <br>
    <div>
        <button class="btn-primary btn-sm text-white ms-6 me-4 mb-2 mt-2" (click)="onadd()">
             Invoice
        </button>
    </div>

    <div class="d-flex flex-row table-responsive">
        <div class="card card-body m-3 shadow-lg p-3 mb-5 bg-white rounded">
            <table id="invoice" class="table table-striped table-row-bordered gy-5 gs-7">
                <thead class="table_head">
                    <tr class=" text-white fw-bold fs-5 text-nowrap bg-lightblue text-blue">
                        <th>S.No</th>
                        <th>Invoice Ref. No </th>
                        <th>Invoice Date</th>
                        <th>Customer Name</th>
                        <th>Contact Details</th>
                        <th style="text-align: right;">Invoice Amount</th>
                        <th>Status</th>
                        <th style="text-align: center;">Action</th>
                    </tr>
                </thead>
                <tbody class="table_body">
                    <tr *ngFor="let data of invoicesummarylist; let i=index;">
                        <td>{{i+1}}</td>
                        <td>{{data.invoice_refno}}</td>
                        <td>{{data.invoice_date}}</td>
                        <td>{{data.customer_name }}</td>
                        <td>{{data.customer_contactperson}}</td>
                        <!-- <td><i class="fa-solid fa-eye bg-primary rounded p-2 me-2 fs-6" style="color: #ffffff;"></i></td> -->
                        <td style="text-align: right;">{{data.invoice_amount}}</td>
                        <td>{{data.invoice_status}}</td>
                        <td class="text-center text-nowrap">
                            <i class="fa-solid fa-e bg-info rounded p-2 me-2 fs-5"
                                style="color: #ffffff; width: 30px;" 
                                (click)="einvoice(data.invoice_gid)"></i>
                            <i class="fa-solid fa-eye bg-primary rounded p-2 me-2 fs-5"
                                style="color: #ffffff; width: 30px;"></i>
                            <i class="fa-solid fa-pencil bg-warning rounded p-2 me-2 fs-5 text-white"
                                style="width: 30px;" (click)="editinvoice(data.invoice_gid)"></i>
                            <i class="fa-solid fa-print bg-success rounded p-2 me-2 fs-5 text-white"
                                style="width: 30px;" (click)="PrintPDF(data.invoice_gid)"></i>
                            <i class="bi bi-trash-fill bg-danger rounded p-2 me-2 fs-5" data-bs-toggle="modal"
                                data-bs-target="#myModaldelete" style="color: #ffffff; width: 30px;"></i>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- begin::Delete Popup -->
<div class="modal" id="myModaldelete" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="text-center my-4">
                <h2><b>Are you sure?</b></h2>
                <p style="display: block;">Do You Want To Delete the Record?</p>
                <div class="text-center my-4">
                    <button class="btn-danger btn-sm text-white me-4" (click)="ondelete()" data-bs-dismiss="modal">
                        <i class="bi bi-trash-fill text-white fs-5 me-2"></i>Delete
                    </button>
                    <button class="btn-primary btn-sm text-white me-2" data-bs-dismiss="modal">
                        <i class="fas fa-close text-white me-2"></i>Close
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end::Delete Popup -->