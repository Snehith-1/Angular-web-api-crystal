<div class="card shadow-sm">
    <div class="card-header">
        <h3 class="card-title">Designation Summary</h3> 
    </div>
    <br>
    <div>  &nbsp;  &nbsp; 
        <!-- ADD Function -->
        <button type="button" class="btn-primary btn-sm text-white me-4"  data-bs-toggle="modal" data-bs-target="#myModaladd">
             &nbsp;&nbsp;&nbsp; Add Designation
        </button> 
    </div> 
    <div class="table-responsive">
        <div class="card card-body m-3 shadow-lg p-3 mb-5 bg-white rounded">
            <table id="branch_list" class="table table-striped table-row-bordered gy-5 gs-7 ">
                <thead>
                    <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-blue">
                        <th>S.No</th>
                        <th>Designation Code </th>
                        <th>Designation Name</th>
                       
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody> 
                    <tr *ngFor="let data of Designation_list; let i=index;"> 
                        <td >{{i+1}}</td>
                        <td>{{data.designation_code}}</td>
                        <td>{{data.designation_name}}</td>
                      
                        <td class="text-center text-nowrap">
                          <button title="Edit" type="button" class="btn btn-icon btn-sm bg-success me-2"  (click)="openModaledit(data)"  data-bs-toggle="modal" data-bs-target="#myModaledit"  ><span class="fa-solid fa-pencil text-white  fs-6"></span></button>
                          <button title="Status" type="button" (click)="openModalactive(data)"   data-bs-toggle="modal" data-bs-target="#myModalactive" class="btn btn-icon btn-sm bg-danger me-2"><span class="bi-hand-thumbs-up-fill text-white fs-6"></span></button>   
                          </td>
                    </tr>
                </tbody> 
            </table>
        </div> 
    </div> 
  </div>


  <!-- The Modal ADD -->
<form [formGroup]="reactiveForm" #form="ngForm">
    <div class="modal" id="myModaladd" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog ">
          <div class="modal-content">
    <!-- Modal Header -->
    
            <div class="card-header p-1 pb-3 pt-2 rounded-top bg-primary">
              <div>
                <h2 class="fw-bolder text-white">&nbsp;&nbsp;<i class="fas fa-plus fw-bolder fs-3"></i> &nbsp;&nbsp;Add
                  Designation Details</h2> 
              </div>
            </div>
    
            <!-- Modal body -->
    
         <div class="modal-body">  
            <div class="row"><span class="font-bold"><b>Designation Code</b><span class="ms-1 text-red">*</span></span>  
                <div class="col-lg-12 col-md-12 col-sm-12 fv-row mt-2 d-flex ">  
                  <input formControlName="designation_code" type="text" class="
                         form-control form-control-lg form-control-solid  
                         custom-input  
                         mb-3 mb-lg-0 
                         bg-white
                         custom-input  
                       "  placeholder="Auto Genarator" readonly />
                </div> 
              </div>  
              
              <br>
               <div class="row"><span class="font-bold"><b>Designation Name</b><span class="ms-1 text-red">*</span></span>
                  <div class="col-lg-12 col-md-12 col-sm-12 fv-row mt-2 d-flex ">
                    <input formControlName="designation_name" type="text" class="
                                    form-control form-control-lg form-control-solid
                                    custom-input
                                    mb-3 mb-lg-0
                                    bg-white
                                    custom-input  
                                    "[ngStyle]="{  
                                    'border-color':
                                    designation_name.invalid && designation_name.touched
                                        ? 'red'  
                                      : 'rgb(209, 209, 209)'
                                  }" placeholder="Enter Designation Name" pattern="^(?!\s*$).+" name="designation_name"
                      required />
                  </div>
                </div>
    
              <div *ngIf="designation_name.invalid && (designation_name.dirty || designation_name.touched)">  
                <div *ngIf="designation_name.errors?.['required']">  
                  <span style="color:red;">Designation Name is required.</span>  
                </div>
                </div>  
              <br>           
              
    
              
    </div> 
            <!-- Modal footer --> 
            <div class="text-center my-4">
              <button (click)="onsubmit()" [disabled]="reactiveForm.invalid" [ngClass]="{
                    'primary-button': !reactiveForm.invalid,
                    'secondary-button': reactiveForm.invalid
                  }" data-bs-dismiss="modal">
                <i class="fas fa-check text-white fs-5 "></i> &nbsp;Submit
              </button> &nbsp;&nbsp;
              <button class="btn-danger btn-sm text-white me-4" (click)="onclose()" data-bs-dismiss="modal">
                <i class="fas fa-close text-white"></i> &nbsp;Close
              </button>
            </div>
          </div>
        </div>
    
    </div>
    
    </form>  


    <form [formGroup]="reactiveFormEdit1" #form="ngForm">
      <div class="modal" id="myModalactive" data-bs-backdrop="static" data-bs-keyboard="false">
          <div class="modal-dialog ">
            <div class="modal-content">
      <!-- Modal Header -->
      
              <div class="card-header p-1 pb-3 pt-2 rounded-top bg-primary">
                <div>
                  <h2 class="fw-bolder text-white">&nbsp;&nbsp;<i class="fas fa-plus fw-bolder fs-3"></i> &nbsp;&nbsp;Designation Status</h2> 
                </div>
              </div>
      
              <!-- Modal body -->
      
           <div class="modal-body">  
            <div class="row">
              <span class="font-bold"><b>Status</b><span class="ms-1 text-red">*</span></span>
              <div class="col-lg-12 col-md-12 col-sm-12 fv-row mt-2 d-flex">
                  <div class="form-check form-check-inline">
                      <input type="radio" class="form-check-input" id="activeRadio" formControlName="designation_status" value="Active">
                      <label class="form-check-label" for="activeRadio">Active</label>
                  </div>
                  <div class="form-check form-check-inline">
                      <input type="radio" class="form-check-input" id="inactiveRadio" formControlName="designation_status" value="Inactive">
                      <label class="form-check-label" for="inactiveRadio">Inactive</label>
                  </div>
              </div>
          </div>
              
               
           </div> 
              <!-- Modal footer --> 
              <div class="text-center my-4">
                <button (click)="onsubmit1()" [disabled]="reactiveFormEdit1.invalid" [ngClass]="{
                      'primary-button': !reactiveFormEdit1.invalid,
                      'secondary-button': reactiveFormEdit1.invalid
                    }" data-bs-dismiss="modal">
                  <i class="fas fa-check text-white fs-5 "></i> &nbsp;Submit
                </button> &nbsp;&nbsp;
                <button class="btn-danger btn-sm text-white me-4" (click)="onclose()" data-bs-dismiss="modal">
                  <i class="fas fa-close text-white"></i> &nbsp;Close
                </button>
              </div>
            </div>
          </div>
      
      </div>
      
      </form>  
  







    <form  [formGroup]="reactiveFormEdit" #form="ngForm">
      <div class="modal" id="myModaledit"  data-bs-backdrop="static" data-bs-keyboard="false">
          <div class="modal-dialog">
            <div class="modal-content">
        
               
              <div class="card-header p-1 pb-3 pt-2 rounded-top bg-primary">
                  <div><h2 class="fw-bolder text-white">&nbsp;&nbsp;<i class="fas fa-pencil fw-bolder fs-3"></i> &nbsp;&nbsp;Edit Designation Details</h2></div>
      
              </div>
        
              
              <div class="modal-body">
                  <input class="form-control form-control-lg" formControlName="designation_gid" hidden pattern="^(?!\s*$).+" type="text" placeholder="Enter Department" aria-label=".form-control-lg example" autocomplete="off" required >
  
                  <div class="row"><span class="font-bold"><b>Designation Code</b><span class="ms-1 text-red">*</span></span>  
                    <div class="col-lg-12 col-md-12 col-sm-12 fv-row mt-2 d-flex ">  
                      <input formControlName="designation_code" type="text" class="
                             form-control form-control-lg form-control-solid  
                             custom-input  
                             mb-3 mb-lg-0 
                             bg-white
                             custom-input  
                           "   readonly />
                    </div> 
                  </div>             
                  <br>
      
                  <div class="row"><span class="font-bold"><b>Designation Name</b><span class="ms-1 text-red">*</span></span>
                    <div class="col-lg-12 col-md-12 col-sm-12 fv-row mt-2 d-flex ">
                      <input formControlName="designation_name" type="text" class="
                                      form-control form-control-lg form-control-solid
                                      custom-input
                                      mb-3 mb-lg-0
                                      bg-white
                                      custom-input  
                                      "[ngStyle]="{  
                                      'border-color':
                                      designation_name.invalid && designation_name.touched
                                          ? 'red'  
                                        : 'rgb(209, 209, 209)'
                                    }"  pattern="^(?!\s*$).+" name="designation_name"
                        required />
                    </div>
                  </div>
      
                <div *ngIf="designation_name.invalid && (designation_name.dirty || designation_name.touched)">  
                  <div *ngIf="designation_name.errors?.['required']">  
                    <span style="color:red;">Designation Name is required.</span>  
                  </div>
                  </div>
                <br>
        
        
             
              <div class="text-center my-4">
                  <button   (click)="onupdate()" [disabled]="reactiveFormEdit.invalid" [ngClass]="{
                      'primary-button': !reactiveFormEdit.invalid,
                      'secondary-button': reactiveFormEdit.invalid
                    }" data-bs-dismiss="modal">          
                      <i class="fas fa-check text-white fs-5 "></i> &nbsp;Update
                  </button> &nbsp;&nbsp;
                  <button class="btn-danger btn-sm text-white me-4"  (click)="onclose()" data-bs-dismiss="modal">
                  <i class="fas fa-close text-white"></i> &nbsp;Close
                  </button>
              </div>
      
              </div>
          </div>
      </div>

</div>

    </form>