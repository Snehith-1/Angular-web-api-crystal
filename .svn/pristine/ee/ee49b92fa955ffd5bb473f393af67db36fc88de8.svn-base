<div class="row" style="margin-top: 10px;">
    <div class=" col-lg-3 col-md-12 col-sm-12">
        <div class="cardHeadLeads radius-10" style="border-left: 5px solid #098030; cursor: not-allowed;">
            <div class="card-body12">
                <div class="d-flex align-items-center">
                    <div>
                        <h5 class="mb-0 text-secondary">Campaign</h5>

                        <h4 class="badge-green badge-outline-green badge-success fs-4 mt-2">{{template_count}}</h4>

                    </div>
                    <div class="widgets-icons-2 rounded-circle bg-gradient-darkgreens text-white ms-auto"><i
                            class="fa-regular fa-calendar-days"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class=" col-lg-3  col-md-12 col-sm-12">
        <div class="cardHeadLeads radius-10" style="border-left: 5px solid #e47922; cursor: not-allowed;">
            <div class="card-body12">
                <div class="d-flex align-items-center">
                    <div>
                        <h5 class="mb-0 text-secondary"> Sent </h5>

                        <h4 class="badge-orange badge-outline-orange badge-success fs-4 mt-2">{{mailsendtotal_count}}
                        </h4>

                    </div>
                    <div class="widgets-icons-2 rounded-circle bg-gradient-brown text-white ms-auto"><i
                            class="fa-solid fa-envelopes-bulk"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class=" col-lg-3 col-md-12 col-sm-12">
        <div class="cardHeadLeads radius-10" style="border-left: 5px solid #0d8191; cursor: not-allowed;">
            <div class="card-body12">
                <div class="d-flex align-items-center">
                    <div>
                        <h5 class="mb-0 text-secondary">Delivered</h5>

                        <h4 class="badge-blue badge-outline-blue badge-success fs-4 mt-2">{{deliverytotal_count}}</h4>

                    </div>
                    <div class="widgets-icons-2 rounded-circle bg-gradient-darkblue text-white ms-auto"><i
                            class="fa-solid fa-share"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class=" col-lg-3 col-md-12 col-sm-12">
        <div class="cardHeadLeads radius-10 border-start border-0 border-3 border-violet" style="cursor: not-allowed">
            <div class="card-body12">
                <div class="d-flex align-items-center">
                    <div>
                        <h5 class="mb-0 text-secondary">Viewed</h5>

                        <h4 class="badge-violet badge-outline-violet badge-success fs-4 mt-2">{{opentotal_count}}</h4>

                    </div>
                    <div class="widgets-icons-2 rounded-circle bg-gradient-violet text-white ms-auto"><i
                            class="fa-solid fa-eye "></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<div class="card">
    <div class="card-header bg-mail" style="color: white;">
        <h3 class="card-title"><i class="fa-regular fa-envelope" style="font-size: 20px;"></i>&nbsp;&nbsp;Email</h3>
        <div style="margin: 13px">

            <button title="Create Campaign" class="btn-secondary btn-sm text-black me-4 " (click)="onadd()"> <i
                    class="fa-solid fa-circle-plus fs-3"></i>&nbsp;
                Create Campaign</button>
            <button title="Mail Box" class="btn-secondary btn-sm text-black me-4 " (click)="onopen()"> <i
                    class="fa-regular fa-envelope fs-3"></i>&nbsp;
                Mail Box</button>


        </div>

    </div>
    <div class="card card-body m-3 shadow-xl p-3 mb-5 bg-white rounded table-responsive">
        <div class="row ms-3 mt-3 d-flex align-items-center">
            <div class="col">
                <h3 class="card-title"> <i class="fas fa-bullhorn fs-2"></i>&nbsp;&nbsp;Campaign Summary</h3>
            </div>
        </div>
        <table id="mailtemplate_list" class="table table-striped table-row-bordered border-bottom gs-7 ">
            <thead>
                <tr class="fw-bolder fs-5 text-nowrap bg-mail text-white ">

                    <th>S.No</th>
                    <th>Date</th>
                    <th>Campaign</th>
                    <th class="text-center">Sent</th>
                    <th class="text-center">Delivered</th>
                    <th class="text-center">Viewed</th>
                    <th class="text-center">Clicked</th>
                    <th class="text-center">Status</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                <tr *ngFor="let data of mailtemplate_list; let i=index;" class="align-middle">

                    <td>{{i+1}}</td>
                    <td>{{data.created_date}}</td>
                    <td>{{data.template_name}}</td>
                    <td class="text-center text-nowrap"><span
                            class="badge badge-circle badge-info text-white ">{{data.sent_mail}}</span></td>
                    <td class="text-center text-nowrap"><span
                            class="badge badge-circle badge-primary text-white ">{{data.send_mail}}</span></td>
                    <td class="text-center text-nowrap"> <span
                            class="badge badge-circle badge-success text-white">{{data.read_mail}}</span></td>
                    <td class="text-center text-nowrap"> <span
                            class="badge badge-circle badge-dark text-white">{{data.click_mail}}</span></td>
                    <td class="text-center text-nowrap">
                        <ng-container *ngIf="data.template_flag ==='Y'">
                            <div class="form-check form-switch d-flex justify-content-center align-items-center">
                                <input class="form-check-input form-switch text-center text-nowrap  "
                                    type="checkbox" role="switch" title="Active/Inactive" (click)="toggleswitch(data)"
                                    id="flexSwitchCheckChecked" style=" background-color: #30a14a;" checked >
                            </div>
                        </ng-container>
                        <ng-container *ngIf="data.template_flag ==='N'">
                            <div class="form-check form-switch d-flex justify-content-center align-items-center">
                                <input class="form-check-input form-switch text-center text-nowrap slider  "
                                    type="checkbox" role="switch" title="Active/Inactive" (click)="toggleswitch(data)"
                                    id="flexSwitchCheckDefault" style=" background-color: #e15555;">
                            </div>
                        </ng-container>
                    </td>
                    <td class="text-center text-nowrap">
                        <ng-container *ngIf="data.template_flag ==='Y'">
                            <button [disabled]="isButtonFalse" title="Send" type="button" (click)="onsend(data)"
                                data-bs-toggle="modal" class="btn btn-icon btn-sm  paperplane-button"><span
                                    class="fa-solid fa-paper-plane text-white fs-6"></span></button>&nbsp;
                        </ng-container>
                        <ng-container *ngIf="data.template_flag ==='N'">
                            <button [disabled]="isButtonTrue" title="Send" type="button" (click)="onsend(data)"
                                data-bs-toggle="modal" class="btn btn-icon btn-sm  paperplane-button"><span
                                    class="fa-solid fa-paper-plane text-white fs-6"></span></button>&nbsp;
                        </ng-container>
                        <button title="View" (click)="ontemplateview(data)" type="button" data-bs-toggle="modal"
                            class="btn  btn-icon btn-sm eye-button"><span
                                class="fa-solid fa-eye text-white fs-6"></span></button>&nbsp;
                        <button title="Report" (click)="mailstatus(data)" type="button" data-bs-toggle="modal"
                            class="btn  btn-icon btn-sm calendarcheck-button"><span
                                class="fa-solid fa-envelope-open-text text-white fs-6"></span></button><br>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>