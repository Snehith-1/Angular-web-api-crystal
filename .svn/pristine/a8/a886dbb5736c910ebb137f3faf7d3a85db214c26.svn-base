<div class="card shadow-sm">
    <div class="card-header">
        <h3 class="card-title">Role Management</h3>
    </div>
    <br>
    <div>  &nbsp;  &nbsp;

        <!-- ADD Function -->
        <button title="Add Role" class="btn-primary btn-sm text-white me-4 mb-2 mt-2" routerLink="/hrm/HrmMstRoleAdd">
            <i class="fas fa-plus"></i> &nbsp;&nbsp;&nbsp;
            Add Role</button>
           
           <!-- Add Modal -->
     
</div> 
<div class="table-responsive">
    <div class="card card-body m-3 shadow-lg p-3 mb-5 bg-white rounded">
        <table id="roleManagement" class="table table-striped table-row-bordered gy-5 gs-7 ">
            <thead>
                <tr class=" text-white fw-bold fs-5 text-nowrap bg-lightblue text-blue">
                    <th>S.No</th>
                    <th>Role Code</th>
                    <th>Role Title</th>
                    <th>Reporting To Role</th>
                    <th>Probation Period</th>
                    <th>Job Description</th>
                    <th>Role Responsible</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody> 
                <tr *ngFor="let data of roleMasterData; let i=index;">
                    <td >{{i+1}}</td>
                    <td>{{data.role_code}}</td>
                    <td>{{data.role_name}}</td>
                    <td>{{data.reporting_to}}</td>
                    <td>{{data.probation_period}}</td>
                    <td>{{data.job_description}}</td>
                    <td>{{data.role_responsible}}</td> 
                    <td class="text-center text-nowrap">
                    <button title="Edit" type="button" class="btn btn-icon btn-sm bg-success me-2" (click)="role_edit(data.role_gid)"><span class="fa-solid fa-pencil text-white  fs-6"></span></button>
                    <button title="Delete" type="button" class="btn btn-icon btn-sm bg-danger me-2" data-bs-target="#roledelete" data-bs-toggle="modal"  (click)="delete(data.role_gid)"><span class="fa-solid fa-trash text-white  fs-6"></span></button>
                    </td>                 
                </tr>
            </tbody>
            
        </table>
    </div>
   
</div>
<div id="roledelete" class="modal fade">

    <div class="modal-dialog modal-confirm">

        <div class="modal-content">

            <div class="modal-body text-center">

                <h4 class="w-100  fw-bolder fs-1 mt-5">Are you sure?</h4>  

                <p class="fw-bold fs-5 mt-4">Do You Want To Delete The Record ?</p>

            </div>

            <div class="modal-footer justify-content-center">

                <button type="button" class="btn-secondary" data-bs-dismiss="modal">Cancel</button>

                <button type="button" class="btn-danger" data-bs-dismiss="modal" (click)="ondelete()">Delete</button>

            </div>

        </div>

    </div>

</div>
 
