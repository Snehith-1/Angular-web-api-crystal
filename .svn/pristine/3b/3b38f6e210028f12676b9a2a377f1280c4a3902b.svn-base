<div class="card">
    <div class="row ms-3 mt-3 d-flex align-items-center">
        <div class="col">
            <h3 class="card-title">Proforma Invoice</h3>
        </div>

        <div class="col me-5">
            <button title="ProformaInvoice" class="btn-primary btn-sm text-white me-4 mb-2 mt-2 float-end"
                (click)="raiseproforma()">Raise Proforma Invoice</button>
        </div>
    </div>

    <div class="table-responsive">
        <div class="mx-3 p-3 pt-0 pb-0 bg-white rounded">
            <table id="proformainvoice" class="table table-striped table-row-bordered border-bottom gs-7">
                <thead>
                    <tr class="fw-bolder fs-7 text-nowrap bg-lightblue text-blue align-middle">
                        <th>S.No</th>
                        <th>Invoice Ref. No</th>
                        <th>Invoice Date</th>
                        <th>Customer Order Ref. No</th>
                        <th>Company</th>
                        <th>Contact Person</th>
                        <th>Mobile</th>
                        <th>Invoice From</th>
                        <th>Mail Details</th>
                        <th style="text-align: right;">Proforma Invoice Amount</th>
                        <th>Status</th>
                        <th style="text-align: center;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr *ngFor="let data of proformainvoice; let i=index;" class="align-middle">
                        <td>{{i+1}}</td>
                        <td>{{data.invoice_refno}}</td>
                        <td>{{data.invoice_date}}</td>
                        <td>{{data.so_referencenumber}}</td>
                        <td>{{data.customer_name}}</td>
                        <td>{{data.customer_contactperson}}</td>
                        <td>{{data.mobile}}</td>
                        <td>{{data.invoice_from}}</td>
                        <td>{{data.mail_status}}</td>
                        <td>{{data.invoice_amount}}</td>
                        <td>{{data.overall_status}}</td>
                        <td class="text-center text-nowrap">
                            <button title="Edit" type="button" class="btn btn-icon btn-sm bg-success me-2"
                                (click)="editproformainvoice(data.invoice_gid)">
                                <span class="fa-solid fa-pencil fs-6" style="color: #ffffff;"></span>
                            </button>
                            <button title="View" type="button" class="btn btn-icon btn-sm bg-primary me-2">
                                <span class="fa-solid fa-eye fs-6" style="color: #ffffff;"></span>
                            </button>
                            <button title="Delete" type="button" class="btn btn-icon btn-sm bg-danger me-2"
                                data-bs-toggle="modal" data-bs-target="#myModalcreditnote">
                                <!-- (click)="creditnoteModaldetails(data)" -->
                                <span class="fa-solid fa-trash fs-6" style="color: #ffffff;"></span>
                            </button>
                            <br>
                            <button title="Advance Receipt" type="button" class="btn btn-icon btn-sm bg-info me-2 mt-2"
                                (click)="proformaadvancereceipt(data.invoice_gid)"><span class="fa-solid fa-receipt fs-4" style="color: #ffffff;"></span>
                            </button>
                            <button title="PDF" type="button" class="btn btn-icon btn-sm bg-secondary me-2 mt-2"
                                (click)="PrintPDF(data.invoice_gid)">
                                <span class="fa-solid fa-file-pdf fs-2" style="color: #000000;"></span>
                            </button>
                            <button title="Mail" type="button" class="btn btn-icon btn-sm bg-warning me-2 mt-2"
                                 (click)="Mail(data.invoice_gid)" >
                                <span class="fa-solid fa-envelope fs-4" style="color: #000000;"></span>
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>