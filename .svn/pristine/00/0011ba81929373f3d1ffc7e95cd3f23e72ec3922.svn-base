<div class="card">
    <div class="row ms-3 mt-3 d-flex align-items-center">
        <div class="col">
            <h3 class="card-title" style="font-size:15px;">Receipt Summary</h3>
        </div>

        <div class="col me-5">
            <button title="Add Receipt" class="btn-primary btn-sm text-white me-4 mb-2 mt-2 float-end"
                (click)="addreceipt()">Add Receipt</button>
        </div>
    </div>

    <div class="table-responsive">
        <div class="mx-3 p-3 pt-0 pb-0 bg-white rounded">
            <table id="receipt" class="table table-striped table-row-bordered border-bottom gs-7">
                <thead>
                    <tr class="fw-bolder fs-7 text-nowrap bg-lightblue text-blue align-middle">
                        <th>S.No</th>
                        <th>Receipt Date</th>
                        <th>Receipt Ref. No</th>
                        <th>Company Name</th>
                        <th>Contact Details</th>
                        <th>Details</th>
                        <th>Mail Details</th>
                        <th>Receipt Type</th>
                        <th>Receipt Amount</th>
                        <th>Receipt Mode</th>
                        <th>Receipt Status</th>
                        <th style="text-align: center;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr *ngFor="let data of receipt; let i=index;" class="align-middle">
                        <td>{{i+1}}</td>
                        <td>{{data.payment_date}}</td>
                        <td>{{data.invoice_refno}}</td>
                        <td>{{data.customer_name}}</td>
                        <td>{{data.contact}}</td>
                        <th title="Details" style="text-align: center;"><i class="fas fa-question-circle fs-2"></i></th>
                        <th title="Mail Details" style="text-align: center;"><i class="fas fa-question-circle fs-2"></i>
                        </th>
                        <td>{{data.payment_type}}</td>
                        <td>{{data.total_amount}}</td>
                        <td>{{data.payment_mode}}</td>
                        <td>{{data.approval_status}}</td>
                        <td class="text-center text-nowrap">

                            <!-- <button title="View" type="button" class="btn btn-icon btn-sm bg-primary me-2">
                                <span class="fa-solid fa-eye fs-6" style="color: #ffffff;"></span>
                            </button> -->
                            <!-- <button title="Delete" type="button" class="btn btn-icon btn-sm bg-danger me-2"
                                data-bs-toggle="modal" data-bs-target="#myModalcreditnote"  (click)="openModaldelete(data.payment_gid)">
                                <span class="fa-solid fa-trash fs-6" style="color: #ffffff;"></span>
                            </button> -->
                            <button title="Delete" type="button" class="btn btn-icon btn-sm bg-danger me-2"
                                data-bs-toggle="modal" data-bs-target="#myModaldelete"
                                (click)="openModaldelete(data.payment_gid)">
                                <span class="fa-solid fa-trash fs-6" style="color: #ffffff;"></span>
                            </button>
                            <!-- <button title="Mail" type="button" class="btn btn-icon btn-sm bg-warning me-2 mt-2">
                                <span class="fa-solid fa-envelope fs-4" style="color: #000000;"></span>
                            </button> -->
                            <button title="PDF" type="button" class="btn btn-icon btn-sm bg-secondary me-2 mt-2"
                            (click)="PrintPDF(data.payment_gid, data.payment_type)">
                                <span class="fa-solid fa-file-pdf fs-2" style="color: #000000;"></span>
                            </button>

                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="modal" id="myModaldelete" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog del_modal-dialog">
            <div class="modal-content del_modal-content">
                <div class="text-center my-4">
                    <h2><b>Are you sure?</b></h2>
                    <p style="display: block;">Do You Want To Delete the Record ?</p>
                    <div class="text-center my-4">
                        <button class="btn-danger btn-sm text-white me-4" (click)="ondelete()">
                            <i class="bi bi-trash-fill text-white fs-5 me-2"></i>Delete
                        </button>
                        <button class="btn-primary btn-sm text-white me-2" data-bs-dismiss="modal">
                            <i class="fas fa-close text-white me-2"></i>Close
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>










































</div>