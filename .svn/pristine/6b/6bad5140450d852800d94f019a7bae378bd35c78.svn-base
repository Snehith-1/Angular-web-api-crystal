<div class="card shadow-sm">
    <div class="card-header">
        <h3 class="card-title">Employee Report Summary</h3> 
    </div>
    <br>
     
    <div class="table-responsive">
        <div class="card card-body m-3 shadow-lg p-3 mb-5 bg-white rounded d-flex">
            <table id="employeereportlist" class="table table-striped table-row-bordered gy-5 gs-7">
                <thead>
                    <tr class="fw-bold fs-5 bg-lightblue text-blue">
                        <th>S.No</th>
                        <th>Employee Code</th>
                        <th>Employee Name</th>
                        <th>Branch</th>
                        <th>Department</th>
                        <th>Designation </th>
                        <th>Gender</th>
                        <th>Joining Date</th>
                        <th>Work Permit No</th>
                        <th>Work Permit Exp Date</th>
                        <th>Passport No</th>
                        <th>Passport Exp Date</th>
                        <th>FIN No</th>
                        <th>Per Hour/Per Day</th>
                        <th>Per Month</th>
                        </tr>
                </thead>
                <tbody> 
                    <tr *ngFor="let data of employeereportlist; let i=index;"> 
                        <td >{{i+1}}</td>
                        <td>{{data.user_code}}</td>
                        <td>{{data.user_name}}</td>
                        <td>{{data.branch_name}}</td>
                        <td>{{data.department_name}}</td>
                        <td>{{data.designation_name}}</td>
                        <td>{{data.employee_gender}}</td>
                        <td>{{data.employee_joiningdate}}</td>
                        <td>{{data.workpermit_no}}</td>
                        <td>{{data.workpermit_expiredate}}</td>
                        <td>{{data.passport_no}}</td>
                        <td>{{data.passport_expiredate}}</td>
                        <td>{{data.fin_no}}</td>
                        <td>{{data.salary}}</td>
                        <td>{{data.permonth_rate}}</td>
                      
                    </tr>
                </tbody> 
            </table>
        </div> 
    </div> 
</div>

