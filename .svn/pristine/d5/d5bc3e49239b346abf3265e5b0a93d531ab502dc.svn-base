<div class="card card-bordered">
    <div class="card-header  d-flex justify-content-center " style="background-color:rgb(188, 229, 246)">
        <h1 class="card-title fw-bold fs-3">Sales Order Report Dashboard</h1>
    </div>

    <div class="d-flex flex-wrap flex-row  ">
        <div class="col-7 card m-3 ms-5 shadow-lg p-3 mb-5 bg-white rounded">

            <div class="me-2">
                
            </div>


        </div>
        <div class="col-13 col-lg-4 card m-3 ms-5 shadow-lg p-3 mb-8 bg-white rounded">
            <div class="card-header justify-content-center " style="background-color:rgb(188, 229, 246)">
                <h3 class="card-title fs-4 fw-bold">Order Transaction </h3>

            </div>
            <div class="table-responsive">
                <div class="card card-body p-3 mb-5 ">
                  <div class="mx-1 p-1  pb-0  table-responsive">
                    <table id="GetOrderForLastSixMonths_List" class="table  table-striped table-row-bordered gy-5 gs-7 ">
                        <thead>
                            <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-blue align-middle">
                                <th>Year </th>
                                <th>Month </th>
                                <th>Order Count </th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr *ngFor="let data of GetOrderForLastSixMonths_List; let i=index;">
                                <td>{{data.year}}</td>
                                <td>{{data.month}}</td>
                                <td>{{data.ordercount}}</td>
                                <td>{{data.amount}}</td>

                            </tr>
                        </tbody>
                    </table>
                </div>


            </div>
        </div>
    </div>
    <div class="col-12 card m-1 ms-1 shadow-lg p-2 mb-8 bg-white rounded">
      <div class="card m-3  ms-2 lg-2 card-header justify-content-center " style="background-color:rgb(188, 229, 246)">
        <h3 class="card-title fs-4 fw-bold">Order Transaction </h3>
      </div>
      <div class="table-responsive">
        <div class="mx-1 p-1  pb-0 bg-white rounded table-responsive">
          <table id="salesteam_list" class="table table-striped table-row-bordered gy-5 gs-7 ">
            <thead>
              <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-blue align-middle">
                <th  style="width: 15%"></th>
                <th >Month </th>
                <th>Order Count </th>
                <th>Amount</th>
              </tr>
            </thead>
            <tbody>
              <tr *ngFor="let data of GetOrderForLastSixMonths_List; let i=index;">
                <td (click)="ondetail(data.month,data.year)" (click)="data.isExpand = !data.isExpand">
                  <i *ngIf="!data.isExpand" class="bi-chevron-right"></i>
                  <i *ngIf="data.isExpand" class="bi-chevron-up"></i>
                </td>
                
                <td>{{data.month}}</td>
                <td>{{data.ordercount}}</td>
                <td>{{data.amount}}</td>


                <td *ngIf="data.isExpand">
                  <br> <br> <br>
                  <div class="table-responsive" style="margin-left:-1110px;">
                    <div class="card card-body m-3 shadow-lg p-3 mb-5 bg-white rounded">
                      <table id="GetOrderDetailSummary" class="table table-striped table-row-bordered gy-5 gs-7 ">
                        <thead>
                          <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-blue align-middle">
                            <th>S.No</th>
                              <th>Order Date</th>
                              <th>Customer Name</th>
                              <th>Contact Details</th>
                              <th>Amount</th>
                              <th>Status</th>
                              <th>Sales Person Name</th>
    
                          </tr>
                        </thead>
                        <tbody>
                          <tr *ngFor="let data1 of GetOrderDetailSummary; let i=index;">
                            <td>{{i+1}}</td>
                            <td>{{data1.salesorder_date}}</td>
                            <td>{{data1.customer_name}}</td>
                            <td>{{data1.contact_details}}</td>
                            <td>{{data1.grandtotal_l}}</td>
                            <td>{{data1.salesorder_status}}</td>
                            <td>{{data1.salesperson_name}}</td>
    
                          </tr>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    






    