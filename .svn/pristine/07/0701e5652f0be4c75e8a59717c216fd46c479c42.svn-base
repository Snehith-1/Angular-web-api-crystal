
<div class="card">
    <div class="row ms-3 mt-3 d-flex align-items-center">
      <div class="col">
        <h3 class="card-title">Quotation Summary</h3>
      </div>
  
      <div class="col me-5">
        <button type="button" class="btn-primary btn-sm text-white me-4 float-end" data-bs-toggle="modal"
          data-bs-target="#myModaladd" routerLink="/smr/SmrTrnQuotationadd">
          Raise Quotation
        </button>
      </div>
    </div>
    <div class="table-responsive">
      <div class="mx-3 p-3 pt-0 pb-0 bg-white rounded" >
        <table id="quotation_list" class="table table-striped table-row-bordered gy-5 gs-7 ">
          <thead>
            <tr class="fw-bold fs-7 text-nowrap bg-lightblue text-blue align-middle">
              <th>S.NO </th>
              <th>Quotation Date</th>
              <th>Quotation Ref.No</th>
              <th>Enquiry Ref.No</th>
              <th>Customer Enquiry Ref.No</th>
              <th>Customer</th>
              <th>Contact</th>
              <th>Quotation Type</th>
              <th>Created By</th>
              <th>Quotation Amount </th>
              <th>Quotation Status</th>
              <th class="text-center">Action</th>
            </tr>
          </thead>
          <tbody>
            <tr *ngFor="let data of quotation_list; let i=index;" style="white-space: nowrap;">
              <td>{{i+1}}</td>
              <td>{{data.quotation_date}}</td>
              <td>{{data.quotation_referenceno1}}</td>
              <td>{{data.enquiry_gid}}</td> 
              <td>{{data.enquiry_referencenumber}}</td> 
              <td>{{data.customer_name}}</td>         
              <td>{{data.contact}}</td>
              <td>{{data.quotation_type}}</td>
              <td>{{data.user_firstname}}</td>
              <td>{{data.Grandtotal}}</td>      
              <td>{{data.quotation_status}}</td>
              <td class="text-center text-nowrap">

                <button title="View" type="button" (click)="openModaldelete()" data-bs-toggle="modal"
                data-bs-target="#myModaldelete" class="btn btn-icon btn-sm bg-primary me-2"><span
                  class="fa-solid fa-eye text-white  fs-6"></span></button>
  
                <button title="Edit" type="button" class="btn btn-icon btn-sm bg-success me-2"
                (click)="openModaledit()" data-bs-toggle="modal" data-bs-target="#myModaledit"><span
                  class="fa-solid fa-pencil text-white  fs-6"></span></button>

                  
              <button title="Amend" type="button" (click)="openModalamend()" data-bs-toggle="modal"
                data-bs-target="#myModaldelete" class="btn btn-icon btn-sm bg-danger me-2"><span
                  class="fa-solid fa-xmark text-white  fs-6"></span></button>

                  <button title="Additional Information" type="button" 
                  class="btn btn-icon btn-sm bg-warning me-2" (click)="onaddinfo()" >
                  <span class="fa-solid fa-book text-white  fs-6"></span></button>
                  
                  

                  <button title="Raise" type="button" 
                  class="btn btn-icon btn-sm bg-primary me-2" (click)="onadd(data.quotation_gid)">
                  <span class="fa-solid fa-arrow-up text-white  fs-6"></span></button> 

                  <button title="Print" type="button" class="btn btn-icon btn-sm bg-warning me-2" (click)="PrintPDF(data.quotation_gid)">
                    <span class="fa-solid fa-print fs-6" style="color: #ffffff;"></span>
                </button>

                  
                  

              </td>
  
              
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  