.grey-box {
    background-color: grey;
    padding: 10px; 
    display: inline-block; 
}
.breadcrumb-item a {
    color: white;
}

.breadcrumb-item span.bullet {
    background-color: white;
}
/* Button Styles */
.reload-button {
    background-color: #00ab41; /* Set the background color */
    border: 1px solid #201d1d; /* Add a border for visual separation */
    color: #333; /* Text color */
}

/* Hover State */
.reload-button:hover {
    background-color: #00c04b; /* Change background color on hover */
}
