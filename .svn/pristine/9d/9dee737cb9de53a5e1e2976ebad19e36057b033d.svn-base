<div class="card shadow-sm">
    <div class="card-header">
        <h3 class="card-title"> Opening Stock</h3> 
    </div>
    <br>
    <div>  &nbsp;  &nbsp; 
        <!-- ADD Function -->
        <button type="button" class="btn-primary btn-sm text-white me-4"  data-bs-toggle="modal" data-bs-target="#myModaladd">
             Opening Stock
        </button> 
    </div> 
      
        <div class="table-responsive">
            <div class="card card-body m-3 shadow-lg p-3 mb-5 bg-white rounded">
                <table id="stock_list" class="table table-striped table-row-bordered gy-5 gs-7 ">
                    <thead>
                        <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-blue">
                        <th>S.No</th>
                        <th>Date </th>
                        <th>Branch</th>
                        <th>Location</th>
                        <th>Product Group</th>
                        <th>Product Code</th>
                        <th>Product Name</th>
                        <th>Product Unit</th>
                        <th>Opening Stock</th>
                        <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody> 
                        <tr *ngFor="let data of stock_list; let i=index;"> 
                            <td >{{i+1}}</td>
                            <td>{{data.created_date}}</td>
                            <td>{{data.branch_name}}</td>
                            <td>{{data.location_name}}</td>
                            <td>{{data.productgroup_name}}</td>
                            <td>{{data.product_code}}</td>
                            <td>{{data.product_name}}</td>
                            <td>{{data.productuom_name}}</td>
                            <td>{{data.opening_stock}}</td>                       
                            <td class="text-center text-nowrap">
                                <button title="Edit" type="button" class="btn btn-icon btn-sm bg-success me-2" ><span class="fa-solid fa-pencil text-white  fs-6"></span></button>
                               
                             </td>
                        </tr>
                    </tbody> 
                </table>
            </div> 
        </div> 
    </div>
    
    
