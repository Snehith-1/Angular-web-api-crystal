<div class="card shadow-sm">
    <div class="card-header bg-lightblue">
      <h3 class="card-title"><b>Loan Summary</b></h3>
    </div>
  
    <div class="mt-6">
      <!-- ADD Function -->
      <button type="button" class="btn-primary btn-sm text-white ms-5 me-4" (click)="addloan()" data-bs-toggle="modal" data-bs-target="#myModaladd">
        Add Loan
      </button>
    </div>
    <div class="table-responsive">
      <div class="card card-body m-3 shadow-lg p-3 mb-5 bg-white rounded">
        <table id="loan_list" class="table table-striped table-row-bordered gy-5 gs-7">
          <thead>
            <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-blue">
              <th>S.No</th>
              <th>Loan Ref. No	</th>
              <th>Loan Date</th>
              <th>Loan To</th>
              <th>Loan Amount</th>
              <th>Paid</th>
              <th>Balance</th>
              <th>Created By</th>
              <th class="text-center">Action</th>
            </tr>
          </thead>
          <tbody>
            <tr *ngFor="let data of loan_list; let i=index;">
                <td>{{i+1}}</td>
                <td>{{data.loan_refno}}</td>
                <td>{{data.created_date}}</td>
                <td>{{data.employee_name}}</td>
                <td>{{data.loanamount}}</td>
                <td>{{data.paid_amount}}</td>
                <td>{{data.balance_amount}}</td>
                <td>{{data.created_by}}</td>
                <td class="text-center text-nowrap">
                  <button title="View" type="button" (click)="openModalview(data.loan_gid)" class="btn btn-icon btn-sm bg-primary me-2">
                    <span class="fas fa-eye fw-bolder fs-3"></span>
                  </button>
                  <button title="Edit" type="button" (click)="openModaledit(data.loan_gid)" class="btn btn-icon btn-sm bg-success me-2">
                    <span  class="fa-solid fa-pencil text-white  fs-6" style="color: #ffffff;"></span>
                  </button>
                </td>
              </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>