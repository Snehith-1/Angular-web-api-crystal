<div class="card shadow-sm">
    <div class="card-header bg-skyblue" style="color: white;">
        <h3 class="card-title">Message Template</h3>
        <div style="margin: 13px">
            <button title="Publish" class="btn-secondary btn-sm text-black me-4 ">
            Publish</button>
        </div>
       
    </div>

    <br>
    <form [formGroup]="reactiveForm" #form="ngForm" (ngSubmit)="onprojectcreate()">
        <div class="card m-3">
            <!-- <div class="card-header bg-lightblue card-height55">
                <div class="card-title m-0">
                    <h4 class="fw-bolder text-blue"> Project Details</h4>
                </div>
            </div> -->
            <div class="d-flex flex-row m-6 flex-wrap">
                <div class="col-12 col-lg-4 col-md-6 col-sm-12">
                    <span class="font-bold fs-6">Project Name</span>
                    <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                        <input type="text" formControlName="project_name" class="
                            form-control form-control-lg form-control-solid
                            borderc-secondary
                            custom-input
                            mb-3 mb-lg-0
                            bg-white
                            custom-input
                          " placeholder="" name="project_name" />
                    </div>
                </div>
                <div class="col-12 col-lg-4 col-md-6 col-sm-12">
                    <span class="font-bold fs-6">Project description</span>
                    <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                        <input type="text" formControlName="project_description" class="
                            form-control form-control-lg form-control-solid
                            borderc-secondary
                            custom-input
                            mb-3 mb-lg-0
                            bg-white
                            custom-input
                          " placeholder="" name="project_description" />
                    </div>
                </div>
                <div class="col-12 col-lg-4 col-md-6 col-sm-12">
                    <span class="font-bold fs-6">Category<span class="ms-1 text-red">*</span></span>
                    <ng-select style=" width: 355px;" formControlName="category" [class.is-invalid]="
                    category.invalid && (category.dirty || category.touched)"
                        [ngClass]="{'invalid-border': category.invalid && category.touched}"
                        class="custom col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2" placeholder="">
                        <ng-option value="MARKETING" selected>Marketing</ng-option>
                    </ng-select>
                </div>
              
            </div>

            <div class="d-flex flex-row m-6 flex-wrap">
               
               
                <div class="col-12 col-lg-4 col-md-6 col-sm-12">
                    <span class="font-bold z-n1 fs-6">Template Name<span class="ms-1 text-red">*</span></span>
                    <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                        <input type="text" formControlName="template_name" class="
                            form-control form-control-lg form-control-solid
                            borderc-secondary
                            custom-input
                            mb-3 mb-lg-0
                            bg-white
                            custom-input
                          " placeholder="" name="template_name" />
                    </div>
                </div>
                <div class="col-12 col-lg-4 col-md-6 col-sm-12">
                    <div class="form-check form-switch" style="margin-top: 30px;">
                        <label class="form-check-label fs-6" for="flexSwitchCheckDefault" style="color: black;">Allow Category Change</label>
                        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault" formControlName="category_change">
                      </div>
                </div>
                
            </div>  
            <div style="padding-top: 15px;">
                <button title="create project" class="btn-success btn-sm text-black me-4" type="submit" style="height: 30px;">
                Submit
               </button>
                <button title="create template" class="btn-success btn-sm text-black me-4" 
                data-bs-toggle="modal" data-bs-target="#myModaladd" style="height: 30px;">
                Get Started now</button>
            </div>         
        </div>
       
    </form>
</div>

