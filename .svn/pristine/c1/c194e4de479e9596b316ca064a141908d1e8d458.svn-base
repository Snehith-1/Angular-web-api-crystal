<div class="card shadow-sm">
    <div class="card-header">
        <h3 class="card-title">Terms And Condition Template Summary</h3> 
    </div>
    <br>
    <div>  &nbsp;  &nbsp; 
        <!-- ADD Function -->
        <button title="Add Template" class="btn-primary btn-sm text-white me-4" routerLink="/pmr/PmrMstTermsconditionsadd">
         
            Add Template</button>  
    </div> 
    <div class="table-responsive">
        <div class="card card-body m-3 shadow-lg p-3 mb-5 bg-white rounded">
            <table id="template_list" class="table table-striped table-row-bordered gy-5 gs-7 ">
                <thead>
                    <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-blue">
                        <th>S.No</th>
                        <th>Template Name</th>
                        <th>Template Type</th>
                        <th>Created By</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody> 
                    <tr *ngFor="let data of template_list; let i=index;"> 
                        <td >{{i+1}}</td>
                        <td>{{data.template_name}}</td>
                        <td>{{data.payment_terms}}</td>
                        <td>{{data.user_firstname}}</td>
                
                        <td class="text-center text-nowrap">
                            <button title="View" type="button" class="btn btn-icon btn-sm bg-primary me-2" (click)="onview(data.employee_gid)" ><span class="fa-solid fa-eye text-white  fs-6"></span></button>
                            <button title="Edit" type="button" class="btn btn-icon btn-sm bg-success me-2" (click)="onedit(data.employee_gid)"><span class="fa-solid fa-pencil text-white  fs-6"></span></button>
                             <button title="Delete" type="button" (click)="openModaldelete(data.entity_gid)"   data-bs-toggle="modal" data-bs-target="#myModaldelete" class="btn btn-icon btn-sm bg-danger me-2"><span class="fa-solid fa-trash text-white  fs-6"></span></button>  
                        </td>
                    </tr>
                </tbody> 
            </table>
        </div> 
    </div> 
</div>