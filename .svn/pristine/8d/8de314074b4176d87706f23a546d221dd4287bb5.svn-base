  // Message send //
  public onMessagesent(gid: string, id: string): void {
    this.reactiveMessageForm.value.identifierValue = gid;
    this.reactiveMessageForm.value.contact_id = id;
    if (this.reactiveMessageForm.value.sendtext != null) {

