  downloadImage(data: any) {
    if(data.product_image !=null && data.product_image != "" ){
      saveAs(data.product_image, data.product_gid  + '.png');
    }
    else{
      window.scrollTo({
        top: 0, // Code is used for scroll top after event done
      });
      this.ToastrService.warning('No Image Found')
  
    }
    }
  downloadmailattchment(data: any) {
    if (data.file_path.endsWith('.doc') || data.file_path.endsWith('.docx')) {
      
      saveAs(data.post_url, data.file_gid  + '.docx');
    } else if (data.file_path.endsWith('.pdf')) {
      
      saveAs(data.post_url, data.file_gid  + '.pdf');
    } else if (data.file_path.endsWith('.xlsx') || data.file_path.endsWith('.xls')) {
      
      saveAs(data.post_url, data.file_gid  + '.xlsx');
    } else {
      
      console.log('Unsupported file type:', data.file_path);
    }
  }
