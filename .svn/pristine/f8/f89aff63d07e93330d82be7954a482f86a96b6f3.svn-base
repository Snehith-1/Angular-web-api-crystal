
<div class="card shadow-sm">
    <div class="card-header">
        <h3 class="card-title">My Lead</h3>
    </div>
    <br>
    <div> &nbsp; &nbsp;
        <!-- ADD Function -->
        <button title="Add Lead" class="btn-primary btn-sm text-white me-4" (click)="onadd()">
            <i class="fas fa-plus"></i> &nbsp;&nbsp;&nbsp;
            Add Lead</button>
    </div> <br>

    <tabset>
        <tab heading="Today Task">
            <div class="table-responsive">
                <div class="card card-body m-3 shadow-lg p-3 mb-5 bg-white rounded">
                    <table id="myleadslist" class="table table-striped table-row-bordered gy-5 gs-7 ">
                        <thead>
                            <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-blue">
                                <th>S.No</th>
                                <th>Team </th>
                                <th>Customer Name</th>
                                <th>Contact Details</th>
                                <th>Lead Notes</th>
                                <th>Schedule Type</th>
                                <th>Schedule Date</th>
                                <th>Schedule Remarks</th>
                                <!-- <th class="text-center">Action</th> -->
                            </tr>
                        </thead>
                        <tbody>
                            <tr *ngFor="let data of myleadslist; let i=index;">
                                <td>{{i+1}}</td>
                                <td>{{data.campaign_title}}</td>
                                <td>{{data.leadbank_name}}</td>
                                <td>{{data.contact_details}}</td>
                                <td>{{data.internal_notes}}</td>
                                <td>{{data.schedule_type}}</td>
                                <td>{{data.schedule}}</td>
                                <td>{{data.schedule_remarks}}</td>

                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </tab>
        <tab heading="In Progress">
            <div class="table-responsive">
                <div class="card card-body m-3 shadow-lg p-3 mb-5 bg-white rounded">
                    <table id="inprogresslist" class="table table-striped table-row-bordered gy-5 gs-7 ">
                        <thead>
                            <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-blue">
                                <th>S.No</th>
                                <th>Team </th>
                                <th>Customer Name</th>
                                <th>Contact Details</th>
                                <th>Remarks</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr *ngFor="let data of inprogresslist; let i=index;">
                                <td>{{i+1}}</td>
                                <td>{{data.campaign_title}}</td>
                                <td>{{data.leadbank_name}}</td>
                                <td>{{data.contact_details}}</td>
                                <td>{{data.internal_notes}}</td>
                                <td class="text-center text-nowrap">
                                    <button title="Add to Customer" class="btn btn-icon btn-sm bg-primary me-2" 
                                     (click)="onedit(data.leadbank_gid)">
                                        <span class="fa fa-user-plus text-white fs-6"></span>
                                    </button>
                                    <button title="Move to Drop" class="btn btn-icon btn-sm bg-warning me-2"
                                    (click)="ondelete(data.leadbank_gid)">
                                        <span class="fa fa-arrow-down text-white fs-6"></span>
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </tab>
        <tab heading="Customer">
            <div class="table-responsive">
                <div class="card card-body m-3 shadow-lg p-3 mb-5 bg-white rounded">
                    <table id="customerlist" class="table table-striped table-row-bordered gy-5 gs-7 ">
                        <thead>
                            <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-blue">
                                <th>S.No</th>
                                <th>Team </th>
                                <th>Customer Name</th>
                                <th>Contact Details</th>
                                <th>Remarks</th>
                                <!-- <th class="text-center">Action</th> -->
                            </tr>
                        </thead>
                        <tbody>
                            <tr *ngFor="let data of customerlist; let i=index;">
                                <td>{{i+1}}</td>
                                <td>{{data.campaign_title}}</td>
                                <td>{{data.leadbank_name}}</td>
                                <td>{{data.contact_details}}</td>
                                <td>{{data.internal_notes}}</td>

                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

        </tab>
        <tab heading="All">
            <div class="table-responsive">
                <div class="card card-body m-3 shadow-lg p-3 mb-5 bg-white rounded">
                    <table id="alllist" class="table table-striped table-row-bordered gy-5 gs-7 ">
                        <thead>
                            <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-blue">
                                <th>S.No</th>
                                <th>Team </th>
                                <th>Customer Name</th>
                                <th>Contact Details</th>
                                <th>Lead Notes</th>
                                <th>Lead Stage</th>
                                <!-- <th class="text-center">Action</th> -->
                            </tr>
                        </thead>
                        <tbody>
                            <tr *ngFor="let data of alllist; let i=index;">
                                <td>{{i+1}}</td>
                                <td>{{data.campaign_title}}</td>
                                <td>{{data.leadbank_name}}</td>
                                <td>{{data.contact_details}}</td>
                                <td>{{data.internal_notes}}</td>
                                <td>{{data.leadstage_name}}</td>

                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </tab>
        <tab heading="Drop">
            <div class="table-responsive">
                <div class="card card-body m-3 shadow-lg p-3 mb-5 bg-white rounded">
                    <table id="droplist" class="table table-striped table-row-bordered gy-5 gs-7 ">
                        <thead>
                            <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-blue">
                                <th>S.No</th>
                                <th>Team </th>
                                <th>Customer Name</th>
                                <th>Contact Details</th>
                                <th>Lead Notes</th>
                                <th>Drop Stage</th>
                              
                                <!-- <th class="text-center">Action</th> -->
                            </tr>
                        </thead>
                        <tbody>
                            <tr *ngFor="let data of droplist; let i=index;">
                                <td>{{i+1}}</td>
                                <td>{{data.campaign_title}}</td>
                                <td>{{data.leadbank_name}}</td>
                                <td>{{data.contact_details}}</td>
                                <td>{{data.internal_notes}}</td>
                                <td>{{data.drop_stage}}</td>
                                
                                <!-- <td class="text-center text-nowrap">
                                </td> -->
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </tab>
    </tabset>
</div>