<div class="card shadow-sm">
  <div class="card-header bg-lightblue">
    <h3 class="card-title"><b>Department Summary</b></h3>
  </div>

  <div class="mt-6">
    <!-- ADD Function -->
    <button type="button" class="btn-primary btn-sm text-white ms-5 me-4" data-bs-toggle="modal" data-bs-target="#myModaladd">
      Add Department
    </button>
  </div>
  <div class="table-responsive">
    <div class="card card-body m-3 shadow-lg p-3 mb-5 bg-white rounded">
      <table id="department_list" class="table table-striped table-row-bordered gy-5 gs-7">
        <thead>
          <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-blue">
            <th>S.No</th>
            <th>Department Code</th>
            <th>Department Prefix</th>
            <th>Department Name</th>
            <th class="text-center">Action</th>
          </tr>
        </thead>
        <tbody>
          <tr *ngFor="let data of department_list; let i=index;">
            <td>{{i+1}}</td>
            <td>{{data.department_code}}</td>
            <td>{{data.department_prefix}}</td>
            <td>{{data.department_name}}</td>
            <td class="text-center text-nowrap">
              <button title="Edit" type="button" (click)="openModaledit(data)" data-bs-toggle="modal" data-bs-target="#myModaledit" class="btn btn-icon btn-sm bg-success me-2">
                <span class="fa-solid fa-pencil text-white  fs-6"></span>
              </button>
              <button title="Delete" type="button" (click)="openModaldelete(data.department_gid)" data-bs-toggle="modal" data-bs-target="#myModaldelete" class="btn btn-icon btn-sm bg-danger me-2">
                <span class="bi bi-trash-fill fs-6" style="color: #ffffff;"></span>
              </button>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- The Modal ADD -->
<form [formGroup]="reactiveForm" #form="ngForm">
  <div class="modal mt-20" id="myModaladd" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog">
      <div class="modal-content">
        <!-- Modal Header -->
        <div class="card-header p-1 pb-3 pt-2 rounded-top bg-primary">
          <div>
            <h2 class="fw-bolder ms-5 mt-4" style="color: #ffffff;">Add Department Details</h2>
          </div>
        </div>
        <!-- Modal body -->
        <div class="modal-body">
          <div class="d-flex flex-row flex-wrap">
            <div class="col-12 col-lg-6 col-md-6 col-sm-12"><b>Department Code</b><span style="color:red"> *</span>
              <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                <input formControlName="department_code" type="text" class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 bg-white custom-input" [ngStyle]="{'border-color': department_code.invalid && department_code.touched ? 'red' : 'rgb(209, 209, 209)'}" placeholder="Enter Department Code" pattern="^(?!\s*$).+" name="department_code" required/>
              </div>
              <div *ngIf="department_code.invalid && (department_code.dirty || department_code.touched)">
                <div *ngIf="department_code.errors?.['required']">
                  <span style="color:red; font-size: 11px;">* Department Code is required.</span>
                </div>
              </div>
            </div>

            <div class="col-12 col-lg-6 col-md-6 col-sm-12"><b>Department Prefix</b>
              <div class="col-lg-12 col-md-12 col-sm-12 fv-row mt-2 d-flex">
                <input formControlName="department_prefix" type="text" class="form-control form-control-lg form-control-solid borderc-secondary bg-white custom-input mb-3 mb-lg-0" placeholder="Department Prefix" name="department_prefix"/>
              </div>
            </div>
          </div>

          <div class="row mt-4">
            <span class="font-bold"><b>Department Name</b><span style="color:red"> *</span></span>
            <div class="col-lg-12 col-md-12 col-sm-12 fv-row mt-2 d-flex">
              <input formControlName="department_name" type="text" class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 bg-white custom-input" [ngStyle]="{'border-color': department_name.invalid && department_name.touched ? 'red' : 'rgb(209, 209, 209)'}" placeholder="Enter Department Name" pattern="^(?!\s*$).+" name="department_name" required/>
            </div>
          </div>
          <div *ngIf="department_name.invalid && (department_name.dirty || department_name.touched)">
            <div *ngIf="department_name.errors?.['required']">
              <span style="color:red; font-size: 11px;">* Department Name is required.</span>
            </div>
          </div>
          <!-- Modal footer -->
          <div class="text-center my-4">
            <button (click)="onsubmit()" class="me-4" [disabled]="reactiveForm.invalid" [ngClass]="{'primary-button': !reactiveForm.invalid, 'secondary-button': reactiveForm.invalid}" data-bs-dismiss="modal">
              <i class="bi bi-check-square fs-5"></i>
                  <span class="ms-3">Submit</span>
            </button>
            <button class="btn-danger btn-sm text-white me-4" (click)="onclose()" data-bs-dismiss="modal">
              <i class="fas fa-close text-white fs-5"></i>
              <span class="ms-3">Close</span>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>
<!-- The Modal Edit -->

<form [formGroup]="reactiveFormEdit" #form="ngForm">
  <div class="modal mt-20" id="myModaledit" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="card-header p-1 pb-3 pt-2 rounded-top bg-primary">
          <div>
            <h2 class="fw-bolder ms-5 mt-4" style="color: #ffffff;">Edit Department Details</h2>
          </div>
        </div>
        <div class="modal-body">
          <input class="form-control form-control-lg" formControlName="department_gid" hidden pattern="^(?!\s*$).+" type="text" placeholder="Enter Department" aria-label=".form-control-lg example" autocomplete="off" required>          
          <div class="d-flex flex-row flex-wrap">
            <div class="col-12 col-lg-6 col-md-6 col-sm-12"><b>Department Code</b><span style="color:red"> *</span>
              <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                <input formControlName="department_code_edit" type="text" class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 bg-white custom-input" [ngStyle]="{'border-color': department_code_edit.invalid && department_code_edit.touched ? 'red' : 'rgb(209, 209, 209)'}" placeholder="Enter Department Name" name="department_code_edit" required/>
              </div>
              <div *ngIf="department_code_edit.invalid && (department_code_edit.dirty || department_code_edit.touched)">
                <div *ngIf="department_code_edit.errors?.['required']">
                  <span style="color:red; font-size: 11px">* Department Code is required.</span>
                </div>
              </div>
            </div>            

            <div class="col-12 col-lg-6 col-md-6 col-sm-12"><b>Department Prefix</b>
              <div class="col-lg-12 col-md-12 col-sm-12 fv-row mt-2 d-flex">
                <input formControlName="department_prefix_edit" type="text" class="form-control form-control-lg form-control-solid borderc-secondary bg-white custom-input mb-3 mb-lg-0" placeholder="Department Prefix" name="department_prefix_edit"/>
              </div>
            </div>
          </div>

          <div class="row mt-4">
            <span class="font-bold"><b>Department Name</b><span style="color:red"> *</span></span>
            <div class="col-lg-12 col-md-12 col-sm-12 fv-row mt-2 d-flex">
              <input formControlName="department_name_edit" type="text" class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 bg-white custom-input" [ngStyle]="{'border-color': department_name_edit.invalid && department_name_edit.touched ? 'red' : 'rgb(209, 209, 209)'}" placeholder="Enter Department Name" pattern="^(?!\s*$).+" name="department_name" required/>
            </div>
            <div *ngIf="department_name_edit.invalid && (department_name_edit.dirty || department_name_edit.touched)">
              <div *ngIf="department_name_edit.errors?.['required']">
                <span style="color:red; font-size: 11px">* Department Name is required.</span>
              </div>
            </div>
          </div>
          
          <div class="text-center my-4">
            <button class="me-4" (click)="onupdate()" [disabled]="reactiveFormEdit.invalid" [ngClass]="{'primary-button': !reactiveFormEdit.invalid, 'secondary-button': reactiveFormEdit.invalid}" data-bs-dismiss="modal">
              <i class="bi bi-check-square text-white fs-5"></i>
                <span class="ms-3">Update</span>
            </button>
            <button class="btn-danger btn-sm text-white me-4" (click)="onclose()" data-bs-dismiss="modal">
              <i class="fas fa-close text-white"></i>
                <span class="ms-3">Close</span>
            </button>
          </div>
        </div>        
      </div>
    </div>
  </div>
</form>

<!-- The Modal Delete -->
<div class="modal" id="myModaldelete" data-bs-backdrop="static" data-bs-keyboard="false">
  <div class="modal-dialog del_modal-dialog">
    <div class="modal-content del_modal-content">
      <div class="text-center my-4">
        <h2><b>Are you sure?</b></h2>
        <p style="display: block;">Do You Want To Delete the Record ?</p>
        <div class="text-center my-4">
          <button class="btn-danger btn-sm text-white me-4" (click)="ondelete()" data-bs-dismiss="modal">
            <i class="bi bi-trash-fill text-white fs-5 me-2"></i>Delete
          </button>
          <button class="btn-primary btn-sm text-white me-2" data-bs-dismiss="modal">
            <i class="fas fa-close text-white me-2"></i>Close
          </button>          
        </div>
      </div>
    </div>
  </div>
</div>