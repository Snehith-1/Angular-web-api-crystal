<div class="table-responsive">
    <div class="card card-body m-3 shadow-xl p-3 mb-5 bg-white rounded">
        <table id="product" class="table table-striped table-row-bordered gy-5 gs-7 ">
            <thead>
                <tr class=" text-white fw-bold fs-6 text-nowrap bg-skyblue">
                    <th>S.No</th>
                    <th>Name</th>
                    <th>Type </th>
                    <th>Status</th>
                    <th>Last Edited</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                <tr *ngFor="let data of template_list; let i=index;">
                    <td>{{i+1}}</td>
                    <td>{{data.p_name}}</td>
                    <td>{{data.p_type}}</td>
                    <td style="white-space: nowrap;color: rgb(37, 129, 28);"><b>Active</b></td>
                    <td>{{data.created_date}}</td>

                    <td class="text-center text-nowrap">
                        <button title="Create Template" type="button" class="btn btn-icon btn-sm bg-view me-2"
                         data-bs-toggle="modal" data-bs-target="#myModaladdtemplate" (click)="openModaledit(data.id)">
                            <span class="fa-solid fa-plus text-white  fs-6"></span>
                        </button>
                        <!-- <button title="View" type="button" class="btn btn-icon btn-sm bg-view me-2">
