<div class="card shadow-sm">
    <div class="card-header">
        <h3 class="card-title"> Sub Function</h3>
        <div class="card-toolbar">
        </div>
    </div>
    <br>
    <div>

        &nbsp; &nbsp;
        <button title="Add Sub Function" class="btn-primary btn-sm text-white me-4 mb-2 mt-2" data-bs-toggle="modal"
            data-bs-target="#subfunction"  (click)="opensubfunctionpopup()">
            <i class="fas fa-plus"></i> &nbsp;&nbsp;&nbsp;
            Add Sub Function  </button>
    </div>
    <div class="table-responsive">
        <div class="card card-body m-3 shadow-lg p-3 mb-5 bg-white rounded">
            <table id="subfunctionsummary" class="table table-striped table-row-bordered gy-5 gs-7 ">
                <thead>
                    <tr class=" text-white fw-bold fs-5 text-nowrap bg-lightblue text-blue">
                        <th>S.No</th>
                        <th>Sub Function</th>
                        <th>Created Date</th>
                        <th>Created By</th>
                        <th>Status</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr *ngFor="let data of  subfunction_list  let i=index;">
                        <td>{{i+1}}</td>
                        <td>{{data.subfunction_name}}</td>
                        <td>{{data.created_date}}</td>
                        <td>{{data.created_by}}</td>
                        <td [ngSwitch]="data.status">
                            <label *ngSwitchCase="'Active'" class="badge bg-success text-white ">Active</label>
                            <label *ngSwitchCase="'Inactive'" class="badge bg-warning text-white ">Inactive</label>
                        </td>
                        <td [ngSwitch]="data.status" class="text-center text-nowrap">

                            <button title="Edit" type="button" class="btn btn-icon btn-sm bg-etdark me-2 "
                                data-bs-toggle="modal"  data-bs-target="#editsubfunction"
                                (click)="editsubfunction(data.subfunction_gid)" [disabled]="data.status === 'Inactive'"><span
                                    class="fa-solid fa-pencil text-white  fs-6"></span></button>
                            <button *ngSwitchCase="'Active'" title="Status" type="button"
                                class="btn btn-icon btn-sm bg-stssuccess me-2" data-bs-toggle="modal"
                                data-bs-target="#updatestatus" (click)="Status_update(data.subfunction_gid)"><span
                                    class="bi-hand-thumbs-up-fill text-white fs-6"></span></button>
                            <button *ngSwitchCase="'Inactive'" title="Status" type="button"
                                class="btn btn-icon btn-sm bg-warning me-2" data-bs-toggle="modal"
                                data-bs-target="#updatestatus" (click)="Status_update(data.subfunction_gid)"><span
                                    class="bi-hand-thumbs-down-fill text-white fs-6"></span></button>
                            <button title="Delete" type="button" class="btn btn-icon btn-sm bg-danger me-2"
                                (click)="delete(data.subfunction_gid)" data-bs-toggle="modal"
                                data-bs-target="#subfunctiondelete" ><span
                                    class="fa-solid fa-trash text-white  fs-6"></span></button>
                        </td>
                    </tr>
                </tbody>

            </table>
        </div>

    </div>

    <div class="modal top fade" id="subfunction" data-bs-backdrop='static' tabindex="-1"  aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered  ">
            <div class="modal-content ">
                <div class=" bg-primary rounded-top">
                    <h3 class="p-4 pt-5 text-white "> <i class="fas fa-plus fs-5"></i>&nbsp;&nbsp;&nbsp; Add Sub
                        Function </h3>

                </div>

                <div class="modal-body">
                    <form  (ngSubmit)="addsubfunction()"  [formGroup]="AddForm" >
 
                    <div class="mb-4">
                        <label for="exampleFormControlInput1" class="required fw-bold mb-1">Sub Function</label>
                        <input type="text"
                            class="form-control form-control-lg form-control-solid borderc-secondary bg-white custom col-lg-12 col-12 col-md-11 col-sm-11 fv-row "
                            formControlName="txtsubfunction" 
                            [(ngModel)]="addsubfunctionFormData.txtsubfunction" pattern="^(?!\s*$).+" placeholder="Sub Function" />
                            <div *ngIf="AddForm.get('txtsubfunction')?.hasError('required') && AddForm.get('txtsubfunction')?.touched || AddForm.get('txtsubfunction')?.hasError('pattern')" class="text-red">
                                Sub Function is required.
                            </div>  
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn-success text-white" [disabled]="AddForm.invalid" 
                            data-bs-dismiss="modal">
                            <i class="fas fa-check text-white fs-5"></i>&nbsp;
                            Submit
                        </button> &nbsp;
                        <button type="button" class="btn-danger " data-bs-dismiss="modal">
                            <i class="fa fa-close fs-5 text-center"></i>&nbsp;
                            Close
                        </button>
                    </div>
                </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" tabindex="-1"  data-bs-backdrop='static' id="editsubfunction">
        <div class="modal-dialog modal-dialog-centered   ">
            <div class="modal-content ">
                <div class=" bg-primary rounded-top">
                    <h3 class="p-4 pt-5 text-white "> <i class="fas fa-plus fs-5"></i>&nbsp;&nbsp;&nbsp; Edit Sub
                        Function </h3>

                </div>

                <div class="modal-body">

                    <form (ngSubmit)="updatesubfunction()"   [formGroup]="EditForm">
                    <div class="mb-4">
                        <label for="exampleFormControlInput1" class="required fw-bold mb-1"> Sub Function</label>
                        <input type="text"
                            class="form-control form-control-lg form-control-solid borderc-secondary bg-white custom col-lg-12 col-12 col-md-11 col-sm-11 fv-row "
                            formControlName="txteditsubfunction" required  pattern="^(?!\s*$).+"[(ngModel)]="editsubfunctionFormData.txteditsubfunction" placeholder="Sub Function" />
                            <div *ngIf="EditForm.get('txteditsubfunction')?.hasError('required') && EditForm.get('txteditsubfunction')?.touched || EditForm.get('txteditsubfunction')?.hasError('pattern')" class="text-red">
                                SubFunction is required.
                            </div>  
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn-success text-white"  [disabled]="EditForm.invalid" data-bs-dismiss="modal">
                            <i class="fas fa-check text-white fs-5"></i>&nbsp;
                            Update
                        </button> &nbsp;
                        <button type="button" class="btn-danger " data-bs-dismiss="modal">
                            <i class="fa fa-close fs-5 text-center"></i>&nbsp;
                            Close
                        </button>
                    </div>

                    </form>

                </div>
            </div>
        </div>
    </div>

    <!-- Status Popup -->
    <div class="modal fade" id="updatestatus" data-bs-backdrop='static'>
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content ">
                <div class="modal-header bg-primary ">
                    <h4 class="modal-title text-white"><i
                            class="bi bi-hand-thumbs-up-fill fs-3"></i>&nbsp;&nbsp; Status</h4>
                </div>
                <div class="modal-body">
                    <form  (ngSubmit)="update_status()" [formGroup]="StatusForm">
                    <div class="mb-3 text-start">
                        <label>Sub Function </label> &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp;
                        &nbsp;&nbsp; {{statussubfunctionFormData.txtsubfunction}}
                    </div>
                    <div class="d-flex justify-content-start mt-4">
                        <label>Status</label>
                        <div class="form-check ps-20 ms-10 ">
                            <input value="Y" type="radio"  formControlName="rbo_status" [(ngModel)]="statussubfunctionFormData.rbo_status" data-toggle="toggle">
                            <label class="ms-3" for="flexRadioDefault1">
                                Active
                            </label>
                        </div>
                        <div class="form-check">
                            <input value="N" type="radio"  formControlName="rbo_status" [(ngModel)]="statussubfunctionFormData.rbo_status" data-toggle="toggle"
                                checked>
                            <label class="ms-3" for="flexRadioDefault2">
                                Inactive
                            </label>
                        </div>
                    </div>
                    <br>
                    <div class="form-group text-start">
                    </div>

                    <label for="exampleFormControlTextarea2" class="required">Remarks </label> <br>
                    <textarea class="form-control rounded-0 mt-3" ng-trim="true"
                        id="exampleFormControlTextarea2" required formControlName="remarks" [(ngModel)]="statussubfunctionFormData.remarks" rows="3"></textarea>

                     <br>
                      <div class="text-center contain">
                    <button type="submit" class=" btn-success" data-bs-dismiss="modal"[disabled]="StatusForm.invalid"
                       > <i class="fas fa-check"></i>&nbsp;&nbsp;Update</button>
                    &nbsp;
                    <button type="button" class=" btn-danger" data-bs-dismiss="modal"><i
                            class="fa fa-close fs-5 text-center"></i> &nbsp;&nbsp;Close</button>
                      </div>
                    </form>
              </div>
                    <br /><br>
                    <!-- Summary -->
                     <div class="table-responsive ms-5 me-5">
                        <div class="table-responsive ms-5 me-5" *ngIf="subfunctioninactivelog_list!=null">
                        <div class="table">
                            <table class="table table-hover ">
                                <thead>
                                    <tr class="tableheading bg-lightblue">
                                        <th>S.No</th>
                                        <th>Status</th>
                                        <th>Updated By</th>
                                        <th>Updated Date</th>
                                        <th>Remarks</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr *ngFor="let data of subfunctioninactivelog_list ; let i=index;">
                                        <td>{{i+1}}</td>
                                        <td>{{data.status}}</td>
                                        <td>{{data.updated_by}}</td>
                                        <td>{{data.updated_date}}</td>
                                        <td>{{data.remarks}}</td>
                                    </tr>
                                </tbody>

                            </table>
                        </div>
                    </div>
                       
                    </div>

                
            </div>


        </div>

    </div>  

    <div id="subfunctiondelete" class="modal fade">
        <div class="modal-dialog modal-confirm">
            <div class="modal-content">
                <div class="modal-body text-center">
                    <h4 class="w-100  fw-bolder fs-1 mt-5">Are you sure?</h4>  
                    <p class="fw-bold fs-5 mt-4">Do You Want To Delete The Record ?</p>
                </div>
                <div class="modal-footer justify-content-center">
                    <button type="button" class="btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn-danger" data-bs-dismiss="modal" (click)="ondelete()">Delete</button>
                </div>
            </div>
        </div>
    </div>
