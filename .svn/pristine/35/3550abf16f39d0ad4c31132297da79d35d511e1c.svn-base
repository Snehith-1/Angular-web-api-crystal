<div class="card card-bordered bg-white">
    <div class="card-header   d-flex justify-content-center " style="background-color:rgb(25, 167, 206)">
        <h1 class="card-title fw-bolder fs-3 text-white">Sales Order Report </h1>
    </div>

    <div class="d-flex flex-wrap flex-row  ">
      <div class="col-7 card m-4 ms-0 shadow-lg p-4  rounded" >

          <div class="me-2">
            <span class="fw-bolder text-gray-800 d-block fs-4 p-3 text-center" style="border-bottom: 2px solid #cce7f7; background-color:rgb(25, 167, 206);">
              <span style="color: #ffffff;">Total Sales Jan - Dec 2022</span>
              <br>
              
            </span>
          </div>
          <!-- end::Chart heading -->
    
          <!-- begin::Chart -->
          <div #chartRef class="d-flex flex-column mixed-widget-2-chart card-rounded-bottom">
            <apx-chart [series]="chartOptions.series" [chart]="chartOptions.chart" [xaxis]="chartOptions.xaxis"
              [yaxis]="chartOptions.yaxis" [dataLabels]="chartOptions.dataLabels" [stroke]="chartOptions.stroke"
              [legend]="chartOptions.legend" [fill]="chartOptions.fill" [states]="chartOptions.states"
              [tooltip]="chartOptions.tooltip" [colors]="chartOptions.colors" [markers]="chartOptions.markers"
              [plotOptions]="chartOptions.plotOptions">
            </apx-chart>
          </div> 


        </div>

        <div class="col-12 col-lg-4 mt-20 mb-20 card m-3 ms-0 ms-lg-12 shadow-lg p-3  bg-white rounded"> 
            <div class="col-12  bg-white rounded">
            <div class="card-header justify-content-center " style="background-color:rgb(25, 167, 206)">
                <h3 class="card-title fs-4 fw-bolder text-white">Order Transaction (Last 6 Months)</h3>

            </div>
            <div class="table-responsive">
                <div class="card card-body p-3 mb-5 ">
                  <div class="mx-1 p-1  pb-0  table-responsive">
                    <table id="GetOrderForLastSixMonths_List" class="table  table-striped table-row-bordered gy-5 gs-7 ">
                        <thead>
                            <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-blue align-middle">
                                <th class ="text-start" >Year </th>
                                <th class="text-start">Month </th>
                                <th class="text-center">Order Count </th>
                                <th class="text-end">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr *ngFor="let data of GetOrderForLastSixMonths_List; let i=index;">
                                <td class ="text-start">{{data.year}}</td>
                                <td class ="text-start">{{data.month}}</td>
                                <td class="text-center">{{data.ordercount}}</td>
                                <td class="text-end">{{data.amount | number}}</td>

                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    </div>
    <div class="col-12 card shadow-lg p-3 mb-3 bg-white rounded">
      <div class="col-12 card  bg-white rounded">
      <div class="card-header justify-content-center " style="background-color:rgb(25, 167, 206)">
        <h3 class="card-title fs-4 fw-bolder text-white">Order Transaction  (Last 6 Months)</h3>
    </div>
    <div class="table-responsive">
        <div class="card card-body p-3 mb-5 ">
          <div class="mx-1 p-1  pb-0  table-responsive ">
          <table id="GetOrderForLastSixMonths_List" class="table table-striped table-row-bordered gy-5 gs-7 ">
            <thead>
              <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-blue align-middle">
                <th style="width: 15% text align "></th>
                <th class ="text-start">Month </th>
                <th  class="text-center">Order Count </th>
                <th  class="text-end" >Amount</th>
              </tr>
            </thead>
            <tbody>
              <tr *ngFor="let data of GetOrderForLastSixMonths_List; let i=index;">
                <td (click)="ondetail(data.month,data.year)" (click)="data.isExpand = !data.isExpand">
                  <i *ngIf="!data.isExpand" class="bi-chevron-right"></i>
                  <i *ngIf="data.isExpand" class="bi-chevron-up"></i>
                </td>
                
                <td class ="text-start">{{data.month}}</td>
                <td  class="text-center" >{{data.ordercount}}</td>
                <td  class="text-end">{{data.amount| number}}</td>


                <td *ngIf="data.isExpand">
                  <br> <br> <br>
                  <div class="table-responsive  bg-white rounded "style="margin-left:-1125px;">
                    <div class="card card-body bg-white rounded table-responsive">
        
                      <table id="GetOrderDetailSummary" class="table table-striped table-row-bordered ">
                        <thead>
                          <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-blue align-middle">

                            <th>S.No</th>
                            <th class="text-start"> Order Date</th>
                                <th class="text-start">Customer Name</th>
                                <th class="text-start"> Contact Details</th>
                                <th class="text-end"> Amount</th>
                                <th class="text-start">  Status</th>
                                <th class="text-start">Sales Person Name</th>
                          </tr>
                        </thead>
                        <tbody>
                          <tr *ngFor="let data of GetOrderDetailSummary; let i=index;">
                            <td>{{i+1}}</td>
                            <td class="text-start">{{data.salesorder_date}}</td>
                              <td class="text-start">{{data.customer_name}}</td>
                              <td class="text-start">{{data.contact_details}}</td>
                              <td class="text-start">{{data.grandtotal_l| number}}</td>
                              <td  class="text-end" >{{data.salesorder_status}}</td>
                              <td class="text-start">{{data.salesperson_name}}</td>
    
                          </tr>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
</div> 
    






    