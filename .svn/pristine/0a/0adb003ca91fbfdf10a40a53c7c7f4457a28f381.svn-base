

<div class="card shadow-sm">
    <div class="card-header">
        <h3 class="card-title">Vendor Register Summary</h3> 
    </div>
    <br>
    <div>  &nbsp;  &nbsp; 
        <!-- ADD Function -->
        <button title="Add Vendor" class="btn-primary btn-sm text-white me-4" routerLink="/pmr/PmrTrnVendorregisterAdd">
            Add Vendor</button>  
            <button title="Import Excel" class="btn btn-icon btn-sm bg-success "  routerLink="/pmr/PmrMstVendorRegisterImportExcel"><span class="fas fa-file-excel text-white  fs-2"></span>  
                </button>  
    </div> 
    <div class="table-responsive">
        <div class="card card-body m-3 shadow-lg p-3 mb-5 bg-white rounded">
            <table id="employee_list" class="table table-striped table-row-bordered gy-5 gs-7 ">
                <thead>
                    <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-blue">
                        <th>S.No</th>
                        <th>Vendor Code</th>
                        <th>Vendor Company</th>
                        <th>Contact Person</th>
                        <th>Contact Number</th>
                        <th>Vendor Status</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody> 
                    <tr *ngFor="let data of employee_list; let i=index;"> 
                        <td >{{i+1}}</td>
                        <td>{{data.vendor_code}}</td>
                        <td>{{data.vendor_companyname}}</td>
                        <td>{{data.contactperson_name}}</td>
                        <td>{{data.contact_telephonenumber}}</td>
                        <td>{{data.vendor_status}}</td>
                
                        <td class="text-center text-nowrap">
                            <button title="View" type="button" class="btn btn-icon btn-sm bg-primary me-2" (click)="onview(data.vendorregister_gid)" ><span class="fa-solid fa-eye text-white  fs-6"></span></button>
                            <button title="Edit" type="button" class="btn btn-icon btn-sm bg-success me-2" (click)="onedit(data.vendorregister_gid)"><span class="fa-solid fa-pencil text-white  fs-6"></span></button>
                            <button title="Additional Information" type="button" class="btn btn-icon btn-sm bg-warning me-2" (click)="onaddinfo(data.vendorregister_gid)" ><span class="fa-solid fa-book text-white  fs-6"></span></button>   
                            <!-- <button title="Update User Code" type="button"       data-bs-toggle="modal" data-bs-target="#myModalUpdateusercode" class="btn btn-icon btn-sm bg-info me-2"><span class="fa-solid bi bi-arrow-clockwise  fs-6"></span></button>   -->
                            <button title="Attachment" type="button" (click)="onattach(data.vendorregister_gid)" class="btn btn-icon btn-sm bg-warning me-2" ><span class="fa-solid fa-link text-white  fs-6"></span></button>   
                            <button title="Delete" type="button" (click)="openModaldelete(data.vendorregister_gid)"
                            data-bs-toggle="modal" data-bs-target="#myModaldelete"
                            class="btn btn-icon btn-sm bg-danger me-2"><span
                                class="fa-solid fa-trash text-white  fs-6"></span></button>
                        </td>
                    </tr>
                </tbody> 
            </table>
        </div> 
    </div> 
</div>
<!-- The Modal Reset-->
<form >
    <div class="modal" id="myModalRest"  data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog">
          <div class="modal-content">
      
            <!-- Modal Header -->

            <div class="card-header p-1 pb-2 pt-1 rounded-top bg-primary">
                <h2 style="margin-top:10px;color:white;font-weight: bold;">&nbsp;&nbsp;<i class="fas fa-lock fw-bolder fs-3"></i> &nbsp;&nbsp;Reset Password</h2>
    
            </div>
      
            <!-- Modal body -->
    
            </div>
        </div>
    </div>
    </form>
          <!-- Delete vendor -->
    <div class="modal" id="myModaldelete" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="text-center my-4">
                    <h2><b>Are you sure?</b></h2>
                    <br>
                    <p style="display: block;">Do You Want To Delete the Record ?</p>
                    <div class="text-center my-4">
                        <button class="btn-primary btn-sm text-white me-2" data-bs-dismiss="modal">
                            <i class="fas fa-close text-white"></i> &nbsp;Close
                        </button>&nbsp;
                        <button class="btn-danger btn-sm text-white me-4" (click)="ondelete()" data-bs-dismiss="modal">
                            <i class="fas fa-trash text-white fs-5 "></i> &nbsp;Delete
                        </button>
    
    
                    </div>
                </div>
            </div>
        </div>
    </div>
    