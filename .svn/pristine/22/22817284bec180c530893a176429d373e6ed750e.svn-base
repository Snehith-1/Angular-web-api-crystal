<div class="card shadow-lg rounded-top">
    <form [formGroup]="roleform">
      <div class="card-title p-5 pb-6 pt-6 rounded-top bg-primary" >
        <h3 class="fw-bolder text-white"><i class="fas fa-plus fw-bolder fs-3"></i> &nbsp;&nbsp;&nbsp;Edit Role</h3>
      </div>
      <div class="d-flex flex-row m-3 mt-5 flex-wrap ">
        <div class="col-lg-6 col-md-6 col-sm-12">
          <div class="card me-lg-3 me-0 ">
              <div class="d-flex flex-row m-lg-6 mt-lg-4 m-6 mt-4">
                <div class="col"><span class="font-bold">Role Code</span>
                    <div class="col-lg-12 fv-row mt-2">
                        <input
                        type="text"
                        class="
                          form-control form-control-lg form-control-solid bg-white custom-input
                          mb-3 mb-lg-0 borderc-secondary"
                          placeholder="Role Code"
                          formControlName="Role_Code"
                        [(ngModel)]="txtrolecode"
                      />   
                      </div>
                </div>
            </div>
          <div class="d-flex flex-row  m-6 mt-0 flex-wrap">
                <div class="col-lg-12"><span class="font-bold">Reporting To Role</span>
                <ng-select [items]="reportingtoList"  class="custom col-lg-12 col-md-11 col-sm-11 fv-row mt-2"
      
                bindLabel="role_name" bindValue="role_gid"
            
                placeholder="Select an option" formControlName="Reporting_to"[(ngModel)]="txtreportingto"></ng-select>
                
                </div>
      
            </div>
            <div class="d-flex flex-row m-6 mt-0 ">
              <div class="col"><span class="font-bold">Job Description<span class="ms-1 text-red" >*</span></span>
                <div class="col-lg-12 fv-row mt-2">
                  <textarea [ngStyle]="{ 'border-color': JobDescription.invalid && JobDescription.touched ? 'red' : 'rgb(209, 209, 209)' }"
                  class="form-control rounded-0" formControlName="Job_Description" pattern="^(?!\s*$).+" [(ngModel)]="txtjobdescription" rows="3"></textarea>
  
                  </div>
                    <span class="text-red" *ngIf="JobDescription.invalid && JobDescription.touched">
                      JobDescription  is required
                    </span>
              </div>
          </div>
          
          </div>         
        </div>
      
        <div class="col-12 col-lg-6 col-md-6 col-sm-12">
            <div class="card ms-lg-3 ms-md-3 mt-lg-0 mt-md-0 mt-5 me-0">
              
              <div class="d-flex flex-row m-lg-6 mt-lg-4 m-6 mt-4">
                  <div class="col"><span class="font-bold">Role Title<span class="ms-1 text-red" >*</span></span>
                      <div class="col-lg-12 fv-row mt-2">
                        <input
                        type="text"
                        [ngStyle]="{ 'border-color': RoleTitle.invalid && RoleTitle.touched ? 'red' : 'rgb(209, 209, 209)' }"
                        class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 bg-white custom-input"
                        [(ngModel)]="txtroletitle"
                        placeholder="Role Title"
                        required
                        formControlName="Role_Title" pattern="^(?!\s*$).+"
                        />
                      </div>
                        <span class="text-red" *ngIf="RoleTitle.invalid && RoleTitle.touched">
                          RoleTitle  is required
                        </span>
                  </div>
              </div>
      
            <div class="d-flex flex-row  m-6 mt-0 flex-wrap">
              <div class="col-12 col-lg-10"><span class="font-bold">Probation Period<span class="ms-1 text-red" >*</span></span>
                <div class="col-lg-12 fv-row mt-2">
                  <input
                  type="number"
                  [ngStyle]="{ 'border-color': ProbationPeriod.invalid && ProbationPeriod.touched ? 'red' : 'rgb(209, 209, 209)' }"
                  class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 bg-white custom-input"
                  [(ngModel)]="txtprobationperiod"
                  placeholder="Probation Period"
                  required
                  formControlName="Probation_Period" pattern="^(?!\s*$).+"
                  />
                </div>
                <span class="text-red" *ngIf="ProbationPeriod.invalid && ProbationPeriod.touched">
                  ProbationPeriod  is required
                </span>
              </div> 
              <div class="col-lg-2 d-flex align-items-center">
                <span class="m-5 mt-11"><b>Month(s)</b></span></div>
              
          </div>
      
          <div class="d-flex flex-row m-6 mt-0 ">
            <div class="col"><span class="font-bold">Role Responsible</span>
                <div class="col-lg-12 fv-row mt-2">
                  <textarea class="form-control rounded-0" rows="3" formControlName="Role_Responsible" [(ngModel)]="txtroleresponsible"></textarea>
                  </div>
            </div>
        </div>   
            </div>         
          </div>
      </div> 
      
      <div class="text-center my-4">
        <button class="btn-success btn-sm text-white me-2"(click)="role_update()"[disabled]="roleform.invalid">     
          <i class="fas fa-check text-white fs-5 "></i> &nbsp;Update
        </button>
        <button class="btn-primary btn-sm text-white me-4" (click)="backbutton()">
          <i class="fas fa-arrow-left"></i> &nbsp;Back
        </button>
      </div>
  </form>
  </div>
    