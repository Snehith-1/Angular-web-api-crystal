<div class="card">
    <div class="card-header bg-mail" style="color: white;">
        <h3 class="card-title"><i class="bi bi-envelope" style="font-size: 20px;"></i>&nbsp;&nbsp;Mail Campaign Summary</h3>
        <div style="margin: 13px">
          
            <button title="Create Template"  class="btn-secondary btn-sm text-black me-4 " (click)="onback()"> <i class="bi bi-arrow-left-circle"></i>
                Back</button>
              
                
        </div>
  
    </div>

    <div class="card card-body m-3 shadow-xl p-3 mb-5 bg-white rounded">
        

        <table id="mailtemplatesendsummary_list" class="table table-striped table-row-bordered border-bottom gs-7">
            <thead>
                <tr class="fw-bolder fs-5 text-nowrap bg-mail text-white Align-middle">
                    <th style="width:2px;">
                        <input type="checkbox" id="checkAll" (change)="$event ? masterToggle() : null"
                            [checked]="selection.hasValue() && isAllSelected()"
                            [indeterminate]="selection.hasValue() && !isAllSelected()" /> All
                    </th>
                    <th>Contact Person</th>
                    <th>Email Address</th>
                    <th>Customer</th>
                    <th>Mobile Number</th>

                </tr>
            </thead>
            <tbody>
                <tr *ngFor="let data of mailtemplatesendsummary_list; let i=index;" class="align-middle">
                    <td> <input type="checkbox" (click)="$event.stopPropagation()"
                            (change)="$event ? selection.toggle(data) : null" [checked]="selection.isSelected(data)" />
                    </td>
                    <td ><span>{{data.names}}<span *ngIf="data.names  === ' '" >{{data.email}}</span></span></td>
                    <!-- <td ><span>{{data.names}} {{data.names}}<span *ngIf="!data.names" >{{data.email}}</span></span></td> -->

                    <!-- <span *ngIf="data.names  === 'data.names'" style="color: rgb(120, 124, 121);font-weight:bolder;"></span><span *ngIf="data.names  === ' '" style="  color: black;font-weight:bolder;"> No Data </span> -->
                    <!-- <td ><span>{{data.names}} <span *ngIf="!data.names" >{{data.email}}</span></span></td>  -->
                    <td style="white-space: nowrap;">{{data.email}}</td>
                    <!-- <td ><span>{{data.default_company}}<span *ngIf="data.default_company  === ' '" >{{data.email}}</span></span></td> -->
                    <td ><span>{{data.default_company}}<span *ngIf="data.default_company  === ''" style="  color: black;font-weight:bolder;"> - </span></span></td>
                    <td ><span>{{data.default_phone}}<span *ngIf="data.default_phone  === ''" style="  color: black;font-weight:bolder;"> - </span></span></td>

                    <!-- <td style="white-space: nowrap;">{{data.default_company}}</td> -->
                    <!-- <td style="white-space: nowrap;">{{data.default_phone}}</td> -->
                </tr>
            </tbody>
        </table>
        <div class="text-center my-4">
            <button type="button" class="btn-success btn-sm text-white me-2" data-bs-toggle="modal"
                data-bs-target="#myModaladd" style="width: 93px;text-align: center;height: 33px;" (click)="onsend()">
                <i class="bi bi-send text-white fs-5"></i> &nbsp;&nbsp;&nbsp; Send
            </button>

            <!-- <button type="button" class="btn-primary btn-sm text-white me-4" data-bs-toggle="modal"
                data-bs-target="#myModaladd" style="width: 93px;text-align: center;height: 33px;" (click)="onback()">
                <i class="bi bi-arrow-left-circle text-white fs-5"></i> &nbsp;&nbsp;&nbsp; Back
            </button> -->
        </div>
    </div>
</div>