
<div class="card shadow-sm">
    <div class="card-header bg-lightblue">
        <h3 class="card-title"><b>Product Summary</b></h3>
        <div class="card-toolbar">
        </div>
    </div>

    <br>
    <div> &nbsp; &nbsp;

        <!-- ADD Function -->
        <button class="btn-primary btn-sm text-white me-4 mb-2 mt-2" (click)="onadd()">
            Add Product </button>
    </div>

    <div class="table-responsive">
        <div class="card card-body m-3 shadow-lg p-3 mb-5 bg-white rounded">
            <table id="product" class="table table-striped table-row-bordered gy-5 gs-7 ">
                <thead>
                    <tr class=" text-white fw-bold fs-5 text-nowrap bg-lightblue text-blue">
                        <th>S.No</th>
                        <th>Product Code</th>
                        <th>Product Name </th>
                        <th>Product Type </th>
                        <th>Product Group</th>
                        <th>Unit</th>
                        <th>Cost Price</th>
                        <th>Status</th>
                        <th>Created Date</th>
                        <th>Created By</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                     <tr *ngFor="let data of products; let i=index;">
                        <td >{{i+1}}</td>
                        <td>{{data.product_code}}</td>
                        <td>{{data.product_name}}</td>
                        <td>{{data.producttype_name}}</td>
                        <td>{{data.productgroup_name}}</td>
                        <td>{{data.productuomclass_name}}</td>
                        <td>{{data.cost_price}}</td>
                        <td>{{data.Status}}</td>
                        <td>{{data.created_date}}</td>
                        <td>{{data.created_by}}</td>
                        <td class="text-center text-nowrap">
                            <button title="Edit" type="button" class="btn btn-icon btn-sm bg-success me-2" (click)="onedit(data.product_gid)"><span class="fa-solid fa-pencil text-white  fs-6"></span></button>
                            <button title="Delete" type="button" (click)="openModaldelete(data.product_gid)"   data-bs-toggle="modal" data-bs-target="#myModaldelete" class="btn btn-icon btn-sm bg-danger me-2"><span class="fa-solid fa-trash text-white  fs-6"></span></button>
                            <button title="View" type="button" class="btn btn-icon btn-sm bg-primary me-2" (click)="onview(data.product_gid)"><span class="fa-solid fa-eye text-white  fs-6"></span></button>
 
                        <!-- <i class="fa-solid fa-pencil bg-success  rounded p-3 me-2 text-white  fs-5"></i> -->
                        </td>
                    </tr> 
                </tbody>
            </table>
        </div>
       
    </div>

    <div class="modal" id="myModaldelete" data-bs-backdrop="static" data-bs-keyboard="false">

        <div class="modal-dialog">
    
            <div class="modal-content">
    
                <div class="text-center my-4">
    
                <h2><b>Are you sure?</b></h2>
    
                <br>
    
                <p style="display: block;">Do You Want To Delete the Record ?</p>
    
              <div class="text-center my-4">
    
                <button class="btn-primary btn-sm text-white me-2"  data-bs-dismiss="modal">
    
                    <i class="fas fa-close text-white"></i> &nbsp;Close
    
                    </button>&nbsp;
    
                    <button class="btn-danger btn-sm text-white me-4"  (click)="ondelete()" >          
                        <i class="fas fa-trash text-white fs-5 "></i> &nbsp;Delete
                    </button>
                   
    
              </div>
    
            </div>
    
          </div>
    
        </div>
    
    </div>
        <br> 
    
















</div>