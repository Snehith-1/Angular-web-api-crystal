      <div class="card">

        <div class="table-responsive">
          <div class="card card-body m-3 shadow-lg p-3 mb-5 bg-white rounded align-middle">
              <table id="employeeattendace_list" class="table table-striped table-row-bordered gy-5 gs-7 ">
                  <thead>
                      <tr class="fw-bold fs-6 text-nowrap bg-lightblue text-blue table-header"> 
                          <th style="width: 2px;">
                              <input type="checkbox" id="checkAll" (change)="$event ? masterToggle() : null"
                                  [checked]="selection.hasValue() && isAllSelected()"
                                  [indeterminate]="selection.hasValue() && !isAllSelected()"/>
                          </th>
                          <th style="width: 8px;">S.No</th>
                          <th>Employee Code</th>
                          <th>Employee Name</th>
                          <th>In-Time</th>
                          <th>Lunch-In-Time</th>
                          <th>Out-Time</th>
                          <th>OT IN</th>
                          <th>OT OUT</th>
                          <!-- <th>Permission From</th>
                          <th>Permission To</th> -->
                          <th>Action</th>                            
                      </tr>
                  </thead>
                  <tbody>
                    <tr *ngFor="let data of employeeattendace_list; let i=index;" class="align-middle">
                      <td> <input type="checkbox" (click)="$event.stopPropagation()"
                          (change)="$event ? selection.toggle(data) : null"
                          [checked]="selection.isSelected(data)" /></td>
                      <td>{{i+1}}</td>
                      <td>{{data.user_code}}</td>
                      <td>{{data.empname}}</td>                      
                      <td>
                        <input type="time" [value]="railwayTime" style="width:130px;" 
                        class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 bg-white 
                        custom-input borderc-secondary"
                        formControlName="login_time_{{i}}" (change)="logintime($event,i)" step="1"  /> 
                      </td>
                      <td>
                        <input type="time"   [value]="railwayTime"  style="width:130px;" 
                        class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 bg-white 
                        custom-input borderc-secondary"
                        formControlName="lunch_in_{{i}}" step="1"  /> 
                      </td>
                      <!-- <td>{{data.lunch_in}}</td>  -->
                      <td>                  
                        <input type="time" [value]="railwayTime"   style="width:130px;" 
                        class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 bg-white 
                        custom-input borderc-secondary"
                        formControlName="logout_time_{{i}}" (change)="logouttime($event,i)"  step="1"  />                       
                      </td>
                      <td>
                        <input type="time"  [value]="railwayTime" style="width:130px;" class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 bg-white custom-input borderc-secondary"
                        formControlName="OT_in" step="1" />
                      </td>
                      <td>
                        <input type="time"  [value]="railwayTime" style="width:130px;" class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 bg-white custom-input borderc-secondary"
                        formControlName="OT_out" step="1" />
                      </td>
                     
                      <!-- <td>
                        <input type="time"   style="width:90px;" class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 bg-white custom-input borderc-secondary"
                        formControlName="weekoff_days_{{i}}" />
                      </td>
                      <td>
                        <input type="time"    style="width:90px;" class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 bg-white custom-input borderc-secondary"
                        formControlName="actual_lop_{{i}}" />
                      </td> -->
                      <td>
                        <span style="cursor: pointer; color: blue; text-decoration: underline;" (click)="updateAction(data)" >Update</span>
                        &nbsp;|&nbsp;
                        <span style="cursor: pointer; color: red; text-decoration: underline;"  (click)="clearAction(data)">Clear</span>
                       
                      </td>                
                     
                    </tr>
                  </tbody>
                   
              </table>
          </div> 
      </div> 


      </div>
      </div>
    </form>