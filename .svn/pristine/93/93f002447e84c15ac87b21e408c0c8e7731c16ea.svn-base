<form [formGroup]="reactiveForm" #form="ngForm">
<div class="card">
    <div class="row ms-3 mt-3 d-flex align-items-center">
      <div class="col">
        <h3 class="card-title">	
            ATTENDANCE REGULATION</h3>
      </div>

      

      <div class="d-flex flex-row m-6 flex-wrap">
        <div class="col-12 col-lg-4 col-md-4 col-sm-12"><span class="font-bold ">Branch</span>
          <ng-select class="custom col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2"
           formControlName="branch_name"
           bindLabel="branch_name" bindValue="branch_gid" [items]="branchList"    (ngModelChange)="onBranchChange($event)"
           placeholder="Select an option" [(ngModel)]="branch_name"></ng-select>
           </div>
  
        <div class="col-12 col-lg-4 col-md-4 col-sm-12"><span class="font-bold ">Department</span>
          <ng-select class="custom col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2" 
          formControlName="department_name" bindLabel="department_name" bindValue="department_gid" [items]="departmentList" 
           placeholder="Select an option"  [(ngModel)]="department_name"></ng-select>
           </div>
          <div class="col-12 col-lg-4 col-md-6 col-sm-12"><span class="font-bold "> Date</span>
            <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
              <input type="date" formControlName="date"  class="form-control form-control-lg form-control-solid custom-input 
              mb-3 mb-lg-0 bg-white border-secondary custom-input date-picker" placeholder="DD-MM-YYYY" />
               </div>
          </div>
      </div>
      <div class="d-flex flex-row m-6 flex-wrap">
        <div class="col-12 col-lg-4 col-md-4 col-sm-12"><span class="font-bold ">Attendance Type</span>
          <ng-select class="custom col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2"
           formControlName="Attentype"
           bindLabel="Attentype_name" bindValue="Attentype_gid" [items]="AttentypeList"  
           placeholder="Select an option"  [(ngModel)]="Attentype"></ng-select>
           </div>
  
        <div class="col-12 col-lg-4 col-md-4 col-sm-12"><span class="font-bold ">Shift type</span>
          <ng-select class="custom col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2" 
          formControlName="shift_name" bindLabel="shift_name" bindValue="shift_gid" 
           placeholder="Select an option" [(ngModel)]="shift_name" [items]="shiftList" ></ng-select>
           </div>

           </div>


           <div class="d-flex flex-row m-6 flex-wrap">
            <div class="col-12 col-lg-2 col-md-2 col-sm-12"><span class="font-bold ">Punch In</span>
              <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                <input type="time" [value]="railwayTime"   formControlName="punchin_time1" 
                 class="form-control form-control-lg border-secondary form-control-solid custom-input mb-3 mb-lg-0 bg-white custom-input
                   mb-3 mb-lg-0"  step="1"  />
              </div>
            </div>
            <div class="col-12 col-lg-2 col-md-2 col-sm-12"><span class="font-bold ">Punch Out</span>
              <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                <input type="time"  [value]="railwayTime" formControlName="punchout_time1" 
                 class="form-control form-control-lg border-secondary form-control-solid custom-input mb-3 mb-lg-0 bg-white custom-input
                   mb-3 mb-lg-0" step="1"  />
              </div>
            </div>
            <div class="col-12 col-lg-2 col-md-2 col-sm-12"><span class="font-bold ">OT In</span>
              <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                <input type="time" [value]="railwayTime" formControlName="user_code" 
                 class="form-control form-control-lg border-secondary form-control-solid custom-input mb-3 mb-lg-0 bg-white custom-input
                   mb-3 mb-lg-0" step="1"  />
              </div>
            </div>
            <div class="col-12 col-lg-2 col-md-2 col-sm-12"><span class="font-bold ">OT Out</span>
              <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                <input type="time" [value]="railwayTime" formControlName="user_code" 
                 class="form-control form-control-lg border-secondary form-control-solid custom-input mb-3 mb-lg-0 bg-white custom-input
                   mb-3 mb-lg-0" step="1"  />
              </div>
            </div>
            <div class="col-12 col-lg-2 col-md-2 col-sm-12"><span class="font-bold ">OT Duration</span>
              <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                <input type="time" [value]="railwayTime" formControlName="user_code" 
                 class="form-control form-control-lg form-control-solid custom-input 
                 mb-3 mb-lg-0 bg-white custom-input border-secondary
                   mb-3 mb-lg-0" step="1"  />
              </div>
            </div>

            </div>

