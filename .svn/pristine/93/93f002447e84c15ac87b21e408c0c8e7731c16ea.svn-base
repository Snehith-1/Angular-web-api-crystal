            <div class="d-flex flex-row m-6 flex-wrap">
              <div class="col-12 col-lg-1 col-md-1 col-sm-12">
                  <button type="submit" class="btn-primary btn-sm text-white" (click)="search()" >
                    <i class="text-white fs-5 me-3"></i>SEARCH
                  </button>
              </div>
              <div class="col-12 col-lg-1 col-md-1 col-sm-12 ms-4">
                <button type="submit" class="btn-primary btn-sm text-white" (click)="punchin()">
                  <i class="text-white fs-5 me-3"></i>PUNCHIN
                </button>
              </div>
              <div class="col-12 col-lg-1 col-md-2 col-sm-12 ms-4 me-4">
                <button type="submit" class="btn-primary btn-sm text-white" (click)="punchout()">
                  <i class="text-white fs-5 me-3"></i>PUNCHOUT
                </button>
              </div>
              <div class="col-12 col-lg-1 col-md-1 col-sm-12 ms-4">
                <button type="submit" class="btn-primary btn-sm text-white">
                  <i class="text-white fs-5 me-3"></i>OTIN
                </button>
              </div>
              <div class="col-12 col-lg-1 col-md-1 col-sm-12">
                <button type="submit" class="btn-primary btn-sm text-white">
                  <i class="text-white fs-5 me-3"></i>OTOUT
                </button>
              </div>
            </div>
      </div>

