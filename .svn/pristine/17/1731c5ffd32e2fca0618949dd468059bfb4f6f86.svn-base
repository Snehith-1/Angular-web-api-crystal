<div class="card">
  <div class="row ms-3 mt-3 d-flex align-items-center">
    <div class="col">
      <h3 class="card-title">Sales Team</h3>
    </div>

    <div class="col me-3">
      <button type="button" class="btn-primary btn-sm text-white me-4 float-end" data-bs-toggle="modal"
        data-bs-target="#myModaladd">
        Add Sales Team
      </button>
    </div>
  </div>
  <div class="table-responsive">
    <div class="mx-3 p-3 pt-0 pb-0 bg-white rounded table-responsive">
      <table id="salesteam_list" class="table table-striped table-row-bordered gy-5 gs-7 ">
        <thead>
          <tr class="fw-bold fs-7 text-nowrap bg-lightblue text-blue align-middle">
            <th></th>
            <th></th>
            <th>S.NO </th>
            <th>Branch</th>
            <th>Team </th>
            <th>Description</th>
            <th>No Of Enquires Assigned</th>
            <th class="text-center">Action</th>
          </tr>
        </thead>
        <tbody>
          <tr *ngFor="let data of salesteam_list; let i=index;">
            <td (click)="ondetail(data.campaign_gid)" (click)="data.isExpand = !data.isExpand">
              <i *ngIf="!data.isExpand" class="bi-chevron-right"></i>
              <i *ngIf="data.isExpand" class="bi-chevron-up"></i>
            </td>
            <td></td>
            <td>{{i+1}}</td>
            <td>{{data.branch_name}}</td>
            <td>{{data.campaign_title}}</td>
            <td>{{data.campaign_description}} </td>
            <td>{{data.assigned_total}}</td>
            <td class="text-center text-nowrap">

              <button title="Edit" type="button" class="btn btn-icon btn-sm bg-success me-2" (click)="openModaledit()"
                data-bs-toggle="modal" data-bs-target="#myModaledit"><span
                  class="fa-solid fa-pencil text-white  fs-6"></span></button>
              <button title="Employee Asssign" type="button" (click)="openModalemployeeassign()" data-bs-toggle="modal"
                data-bs-target="#myModaldelete" class="btn btn-icon btn-sm bg-primary me-2"><span
                  class="fa-solid fa-users text-white  fs-6"></span></button>
              <button title="Manager Asssign" type="button" (click)="openModalmanagerassign()" data-bs-toggle="modal"
                data-bs-target="#myModaldelete" class="btn btn-icon btn-sm bg-warning me-2"><span
                  class="fa-solid fa-user-tie text-white  fs-6"></span></button>
              <button title="Amend" type="button" (click)="openModaldelete()" data-bs-toggle="modal"
                data-bs-target="#myModaldelete" class="btn btn-icon btn-sm bg-danger me-2"><span
                  class="fa-solid fa-xmark text-white  fs-6"></span></button>

            </td>
            <td *ngIf="data.isExpand">
              <br> <br> <br>
              <div class="table-responsive" style="margin-left:-1050px;">
                <div class="card card-body m-3 shadow-lg p-3 mb-5 bg-white rounded">
                  <table id="salesteam_list1" class="table table-striped table-row-bordered gy-5 gs-7 ">
                    <thead>
                      <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-blue align-middle">
                        <th>S.No</th>
                        <th>Employee </th>
                        <th>Total</th>
                        <th>Prospect</th>
                        <th>Potential</th>
                        <th>Drop</th>
                        <th>Completed</th>

                      </tr>
                    </thead>
                    <tbody>
                      <tr *ngFor="let data1 of salesteamgrid_list; let i=index;">
                        <td>{{i+1}}</td>
                        <td>{{data1.user}}</td>
                        <td>{{data1.total}}</td>
                        <td>{{data1.prospect}}</td>
                        <td>{{data1.potential}}</td>
                        <td>{{data1.drop_status}}</td>
                        <td>{{data1.completed}}</td>

                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<form [formGroup]="reactiveForm" #form="ngForm">
  <div class="modal" id="myModaladd" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog w-200 ">
      <div class="modal-content">

 

        <div class="card-header p-1 pb-2 pt-1 rounded-top bg-primary">
          <h2 style="margin-top:10px;color:white;font-weight: bold;">&nbsp;&nbsp;<i class=""></i> &nbsp;&nbsp;Add Sales
            Team</h2>

        </div>
        <div class="modal-body p-10">
          <div class="row"><span class="font-bold"><b>Team</b><span class="ms-1 text-red">*</span></span>
            <div class="col-lg-11 col-md-12 col-sm-12 fv-row mt-2 d-flex ">


              <input formControlName="team_name" type="text" class="
                   form-control form-control-lg form-control-solid borderc-secondary
                   custom-input
                   mb-3 mb-lg-0
                   bg-white
                   custom-input
                 " [ngStyle]="{
                   'border-color':
                   team_name.invalid && team_name.touched
                       ? 'red'
                       : 'rgb(209, 209, 209)'
                 }" placeholder="Enter Team  " pattern="^[a-zA-Z]+$" name="team_name" required maxlength="7" />
            </div>

          </div>
          <div *ngIf="team_name.invalid && (team_name.dirty || team_name.touched)">
            <div *ngIf="team_name.errors?.['required']">
              <span style="color:red;">Team is required.</span>
            </div>
          </div>
          <br>
          <div class="col-12 col-lg-12 col-md-6 col-sm-12"><b>Branch</b> <span class="ms-1 text-red">*</span>
            <div class="col-lg-12 col-12 col-md-11 col-sm-11 fv-row mt-2">
              <ng-select formControlName="branch_name" [items]="branch_list" required
                class="custom col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2" bindLabel="branch_name"
                bindValue="branch_gid" placeholder="Select an option"></ng-select>
            </div>
<br>
          </div>
          <div class="col-12 col-lg-12 col-md-6 col-sm-12"><b> Team Manager</b> <span class="ms-1 text-red">*</span>
            <div class="col-lg-12 col-12 col-md-11 col-sm-11 fv-row mt-2">
              <ng-select formControlName="employee_name" [items]="Getemployee" required
                class="custom col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2" bindLabel="employee_name"
                bindValue="employee_gid" placeholder="Select an option"></ng-select>
            </div>
            <br>
          </div>
          <div class="row"><span class="font-bold"><b>Team Mail ID</b><span class="ms-1 text-red">*</span></span>
            <div class="col-lg-11 col-md-12 col-sm-12 fv-row mt-2 d-flex ">


              <input formControlName="mail_id" type="text" class="
    form-control form-control-lg form-control-solid
    borderc-secondary
    bg-white
    custom-input
    mb-3 mb-lg-0
  " [ngStyle]="{
    'border-color':
    mail_id.invalid && mail_id.touched
        ? 'red'
        : 'rgb(209, 209, 209)'
  }" placeholder="Enter Mail Id"
                pattern="^([a-z0-9-]+|[a-z0-9-]+([.][a-z0-9-]+)*)@([a-z0-9-]+\.[a-z]{2,20}(\.[a-z]{2})?|\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\]|localhost)$"
                name="Email Id" required />
            </div>
            <div *ngIf="
            mail_id.invalid &&
    (mail_id.dirty || mail_id.touched)
  " class="text-red">
              <div *ngIf="mail_id.errors?.['required']">
                Email Id is required.
              </div>
            </div>
            <div *ngIf="
            mail_id.invalid &&
  (mail_id.dirty || mail_id.touched)
" class="text-red">
              <div *ngIf="mail_id.errors?.['pattern']">
                Invalid Email!!.
              </div>
            </div>
          </div>
          <br>
          <div class="row"><span class="font-bold"><b>Description</b></span>
            <div class="col-lg-11 col-md-12 col-sm-12 fv-row mt-2 d-flex ">
              <input type="text" class="
                    form-control form-control-lg form-control-solid custom-input
                    mb-3 mb-lg-0  borderc-secondary bg-white custom-input
                  " placeholder="Team Description" formControlName="description" class="form-control" />
            </div>

          </div>
          <br>
          <div class="text-center my-4">
            <button class="btn-success btn-sm text-white me-4" (click)="onsubmit()" [disabled]="reactiveForm.invalid"
              [ngClass]="{
            'primary-button': !reactiveForm.invalid,
            'secondary-button': reactiveForm.invalid
          }" data-bs-dismiss="modal">
              <i class="fas fa-check text-white fs-5 "></i> &nbsp;Submit
            </button> &nbsp;&nbsp;
            <button class="btn-danger btn-sm text-white me-4" (click)="redirecttolist()" data-bs-dismiss="modal">
              <i class="fas fa-close text-white"></i> &nbsp;Close
            </button>
          </div>

        </div>
      </div>
    </div>
  </div>
</form>