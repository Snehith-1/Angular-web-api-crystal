<div class="card shadow-sm">
    <div class="card-header bg-primary">
        <h3 class="card-title"><b>Appointment Order</b></h3>
        <div class="card-toolbar">
        </div>
    </div>

    <div class="table-responsive">
        <div class="card card-body m-3 shadow-lg p-3 mb-5 bg-white rounded">
            <table id="appointmentorder" class="table table-striped table-row-bordered gy-5 gs-7 ">

                <thead>
                    <tr class=" text-white fw-bold fs-5 text-nowrap bg-lightblue text-blue">
                        <th>Employee Name</th>
                        <th>Designation </th>
                        <th>Branch </th>
                        <th>Appointment Date</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr *ngFor="let data of appointmentorder; let i=index;">
                        <td>{{data.user_name}}</td>
                        <td>{{data.branch_name}}</td>
                        <td>{{data.designation_name}}</td>
                        <td>{{data.appointment_date}}</td>

                        <td class="text-center text-nowrap">
                            <button title="Edit" type="button" class="btn btn-icon btn-sm bg-primary me-2"
                                (click)="onedit(data.appointmentorder_gid)"><span
                                    class="fa-solid fa-pencil text-white  fs-6"></span></button>
                            <button title="PDF" type="button" class="btn btn-icon btn-sm bg-primary me-2"
                                (click)="onpdf(data.employee_gid)"><span
                                    class="fa-solid fa-print text-white fs-6"></span></button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>