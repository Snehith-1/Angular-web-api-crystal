<div class="card card-bordered">
    <div class="card-header d-flex justify-content-center">
        <h1 class="card-title fw-bold fs-3">Office Calendar</h1>
    </div>

    <div class="back-icon">
        <i class="bi bi-arrow-left-square-fill" (click)="back()"></i>
    </div>

    <div class="d-flex flex-row m-6 flex-wrap row">
        <div class="submit-button">
            <button type="button" class="btn-primary btn-text" data-bs-toggle="modal" data-bs-target="#officecalendar">
                <i class="fa fa-hand-point-right"></i>
                <span class="btn-text ms-3">Create Event</span>
            </button>
        </div>
    </div>


    <div calendar=""></div>

    <div class="table-responsive">
        <div class="card card-body m-3 shadow-xl p-3 mb-5 bg-white rounded">
            <table id="office-calendar" class="table table-striped table-row-bordered gy-5 gs-7">
                <thead class="table_head">
                    <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-blue">
                        <th>S.No</th>
                        <th>Holiday Date</th>
                        <th>Holiday Name</th>
                        <th>Day</th>
                    </tr>
                </thead>
                <tbody class="table_body">
                    <tr *ngFor="let data of holidaycalender_list; let i=index;">
                        <td title="S.No" style="width: 5%;"></td>
                        <td title="Holiday Date"></td>
                        <td title="Holiday Name"></td>
                        <td title="Day"></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>



<form [formGroup]="createeventform" novalidate="novalidate" (ngSubmit)="createeventsubmit()">
    <div class="modal fade" id="officecalendar" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered officecalendarpopup">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Create Event</h4>
                <i class="bi bi-x-square fs-1 me-2" data-bs-dismiss="modal"></i>
            </div>

            <div class="modal-body officecalendarpopupbody">                
                <div class="d-flex flex-row flex-wrap">
                    <form action="">
                        <div class="col-12 col-lg-12 col-md-12 col-sm-12">
                            <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                                <div class="d-flex flex-row flex-wrap mt-4">
                                    <div class="col-12 col-lg-6 col-md-6 col-sm-12"><b>Event Date</b>
                                        <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                                            <input type="date" class="form-control form-control-lg form-control-solid date-picker mb-3 mb-lg-0 borderc-secondary bg-white custom-input" placeholder="DD-MM-YYYY" 
                                            formControlName="event_date"/>
                                        </div>
                                    </div>
                
                                    <div class="col-12 col-lg-6 col-md-6 col-sm-12"><b>Event Time</b>
                                        <div class="col-lg-12 col-md-12 col-sm-12 fv-row mt-2 d-flex">
                                            <input type="time" class="form-control form-control-lg form-control-solid date-picker mb-3 mb-lg-0 borderc-secondary bg-white custom-input"
                                            formControlName="event_time"/>
                                        </div>
                                    </div>
                
                                    <div class="d-flex flex-row flex-wrap mt-4">
                                        <div class="col-12 col-lg-12 col-md-12 col-sm-12"><b>Event Title</b>                                                                             
                                                <textarea type="text" rows="2" cols="50" type="text" class="form-control mt-2"
                                                formControlName="event_title"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="text-center contain mt-6">
                                    <button type="button" class="btn-success" (click)="createeventsubmit()">
                                        <i class="bi bi-check-square fs-8 me-2"></i>Submit
                                    </button>
                                    <button type="button" class="btn-danger ms-4" data-bs-dismiss="modal">
                                        <i class="bi bi-x-square fs-8 me-2"></i>Close
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
 

            
            <!-- <div class="e">
                <div class="popover">
                  <h4 class="popover-title">{{event.today_event}} / Event Time: {{event.time}}</h4>
                  <div class="arrow"></div>
                  <div class="popover-content">
                    <p>{{event.event_title}}</p>
                  </div>
                </div>
              </div> -->
            <!-- END panel-->
      

            
        </div>
    </div>
</div>