
<div class="card shadow-sm">
    <div class="card-header">
        <h3 class="card-title">Bonus Summary</h3> 
    </div>
    <br>
    <div>  &nbsp;  &nbsp; 
        <!-- ADD Function -->
        <button type="button" class="btn-primary btn-sm text-white me-4"  data-bs-toggle="modal" data-bs-target="#myModaladd">
           &nbsp;&nbsp; Add Bonus
        </button> 
    </div> 
    <div class="table-responsive">
        <div class="card card-body m-3 shadow-lg p-3 mb-5 bg-white rounded">
            <table id="bonus_list" class="table table-striped table-row-bordered gy-5 gs-7 ">
                <thead>
                    <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-blue">
                        <th>S.No</th>
                        <th>Bonus Title</th>
                        <th>From</th>
                        <th>To</th>
                        <th>Bonus Percentage</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody> 
                    <tr *ngFor="let data of bonus_list; let i=index;"> 
                        <td >{{i+1}}</td>
                        <td>{{data.bonus_name}}</td>
                        <td>{{data.bonus_fromdate}}</td>
                        <td>{{data.bonus_todate}}</td>
                        <td>{{data.bonus_percentage}}</td>
                        <td class="text-center text-nowrap">
             
                            <!-- <a title="Select" href="#" class="btn-text-link me-2" 
                            (click)="selectEmployeeAction(data.bonus_gid)" >SelectEmployee </a> -->

                            <button title="SelectEmployee" type="button" class="btn btn-icon btn-sm bg-success me-2" 
                            (click)="selectEmployeeAction(data.bonus_gid)"><span>
                                <i class="fa-solid fa-list-check"></i>
                            </span></button>
                           

                            <a title="Select" href="#" class="btn-text-link me-2" 
                            (click)="generateBonusAction(data)">GenerateBonus</a>
                            
                            <button title="Delete" type="button" (click)="deleteAction(data.attribute_gid)"   
                            data-bs-toggle="modal" data-bs-target="#myModaldelete" class="btn btn-icon btn-sm bg-danger me-2">
                            <span class="fa-solid fa-trash text-white  fs-6"></span></button>   
                        </td> 
                    </tr>
                </tbody> 
            </table>
        </div> 
    </div> 
</div>