.border-style {
    border: 1px solid #000000; /* Specify the border style and color */
    padding: 10px; /* Add padding for better spacing */
}

/* New Mail Button */ 
.send-button {
    background-color: #009EF7; /* Set the background color */
    border: 1px solid #201d1d; /* Add a border for visual separation */
    color: #333; /* Text color */
}

/* Hover State */
.send-button:hover {
    background-color: #008cff; /* Change background color on hover */
}

/* Attachement Button */ 
.attachement-button {
    background-color: #06b942e1; /* Set the background color */
    border: 1px solid #201d1d; /* Add a border for visual separation */
    color: #333; /* Text color */
}

/* Hover State */
.attachement-button:hover {
    background-color: #04b63ff1; /* Change background color on hover */
}